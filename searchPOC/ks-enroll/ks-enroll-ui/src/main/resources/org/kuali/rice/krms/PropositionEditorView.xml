<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="PropositionBo-InquiryView-Custom" parent="PropositionBo-InquiryView-Custom-parentBean"/>
    <bean id="PropositionBo-InquiryView-Custom-parentBean" abstract="true" parent="Uif-VerticalBoxGroup"
          p:cssClasses="editModeNode">
        <property name="headerText" value="Proposition Custom"/>
        <property name="layoutManager.orientation" value="VERTICAL"/>
        <property name="items">
            <list>

                <!-- Hidden ID field -->
                <bean parent="KS-PropKey-HiddenField"/>

                <bean parent="Uif-InputField-LabelTop" p:propertyName="typeId"
                      p:style="margin-left: 12pt" p:showLabel="true" p:label="Type" p:labelPlacement="TOP"
                      p:maxLength="40">
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.rice.krms.keyvalues.PropositionTypeValuesFinder"/>
                    </property>
                </bean>

                <!-- outer div containing the elements of the comparison: term, operator & constant-->
                <bean parent="Uif-HorizontalBoxGroup">
                    <property name="items">
                        <list merge="true">

                            <bean parent="Uif-InputField-LabelTop" p:propertyName="typeId"
                                  p:style="margin-left: 12pt" p:showLabel="true" p:label="Type" p:labelPlacement="TOP"
                                  p:maxLength="40">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.rice.krms.keyvalues.PropositionTypeValuesFinder"/>
                                </property>
                            </bean>

                            <bean parent="selectedNodeQuickActions"/>

                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="PropositionBo-MaintenanceView-Custom" parent="PropositionBo-MaintenanceView-Custom-parentBean"/>
    <bean id="PropositionBo-MaintenanceView-Custom-parentBean" abstract="true" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>

                <ref bean="KS-PropositionEdit-DefineSection"/>
                <ref bean="KS-PropositionEdit-DetailSection"/>
                
            </list>
        </property>
    </bean>

    <bean id="KS-PropositionEdit-DefineSection" parent="KS-PropositionEdit-DefineSection-parentBean"/>
    <bean id="KS-PropositionEdit-DefineSection-parentBean" abstract="true" parent="KS-VerticalBoxSubSection">
        <property name="headerText" value="Define Rule"/>
        <property name="items">
            <list>

                <!-- Hidden ID field -->
                <bean parent="KS-Rules-HiddenField" p:propertyName="proposition.id"
                      p:showLabel="false" p:label="id" p:maxLength="255">
                </bean>

                <!--Add the type droplist-->
                <bean parent="Uif-InputField-LabelTop" p:propertyName="proposition.typeId"
                      p:showLabel="true" p:label="Select rule type" p:maxLength="40">
                    <property name="instructionalText"
                              value="Use the list below to select the type or rule you would like to add to this requirement."/>
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:cssClasses="categorySelect"
                              p:onChangeScript="ajaxSubmitForm('updateProposition', null, jQuery(this).data('submitdata'), null, null, null);"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.rice.krms.keyvalues.PropositionTypeValuesFinder"/>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="KS-PropositionEdit-DetailSection" parent="KS-PropositionEdit-DetailSection-parentBean"/>
    <bean id="KS-PropositionEdit-DetailSection-parentBean" abstract="true" parent="KS-VerticalBoxSubSection">
        <property name="headerText" value="Add Rule Details"/>
        <property name="items">
            <list>

                <!-- This section is only a place holder, items are added on the viewhelperservice to improve performance.-->
            </list>
        </property>
    </bean>

</beans>

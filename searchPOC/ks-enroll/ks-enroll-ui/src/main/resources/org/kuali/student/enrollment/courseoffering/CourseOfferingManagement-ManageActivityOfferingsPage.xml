    <bean id="KS-CourseOfferingManagement-ManageActivityOfferingsPage" parent="Uif-Page" p:disclosure.render="false"
          p:id="manageActivityOfferingsPage" p:onDocumentReadyScript="replaceBreadCrumbs('@{breadCrumbJSON}');">
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-CriteriaSection"/>
                <ref bean="KS-CourseOfferingManagement-AliasMessageSection" />
                <ref bean="KS-CourseOfferingManagement-ActivityOfferingResultSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-AliasMessageSection" parent="Uif-HorizontalBoxSection">
        <property name="render" value="@{currentCourseOfferingWrapper.crossListed}"/>
        <property name="style" value="background-color:#DDECFF;padding-top: 5px; border: 1px solid #9CC4F9;"/>
        <property name="disclosure.render" value="false"/>
            <property name="items" >
                <list>
                <bean parent="Uif-ImageField" p:image.altText="information"
                    p:source="@{#ConfigProperties['ks.externalizable.images.url']}/information.png">
                    <property name="style" value="padding-right:10px;padding-left:10px"/>
                </bean>
                <bean id="KS-CourseOfferingManagement-AliasMessage" parent="Uif-MessageField"
                          p:messageText="@{currentCourseOfferingWrapper.courseOfferingCode} is a crosslisted alias
                                            for: @{currentCourseOfferingWrapper.alternateCOCodesUIList}. Changes made on
                                            this page to @{currentCourseOfferingWrapper.alternateCOCodesUIList} will be applied to all
                                            aliases, including @{currentCourseOfferingWrapper.courseOfferingCode}." />
                </list>
            </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-ActivityOfferingResultSection" p:id="ActivityOfferingResultSection" parent="Uif-VerticalBoxSection">
        <property name="componentSecurity.viewAuthz" value="true"/>
        <property name="headerText" value="@{currentCourseOfferingWrapper.courseOfferingCode} - @{currentCourseOfferingWrapper.courseOfferingDesc} (@{currentCourseOfferingWrapper.creditCnt} Credits, SOC State: @{socState})" />
        <property name="disclosure.render" value="false"/>
        <property name="header.cssClasses">
            <list merge="true">
                <value>ks-borderBottom</value>
            </list>
        </property>
        <property name="header.lowerGroup">
            <bean parent="Uif-HeaderLowerGroup">
                <property name="style" value="margin-bottom:px;"/>
                <property name="items">
                    <list>
                        <bean parent="Uif-MessageField" p:messageText="Crosslisted as: @{currentCourseOfferingWrapper.alternateCOCodesUIList}" p:render="@{currentCourseOfferingWrapper.alternateCOCodesUIList != ''}" p:style="font-weight:bold; margin-top:4px; margin-bottom:8px;"/>
                        <bean parent="Uif-LinkGroup" p:style="float:right">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-ActionLink" p:methodToCall="loadPreviousCO" p:actionLabel="&lt; @{previousCourseOfferingWrapper != null ? previousCourseOfferingWrapper.courseOfferingCode : ''}" p:render="@{previousCourseOfferingWrapper != null}"/>
                                    <bean parent="Uif-Label" p:labelText="|" p:renderColon="false" p:render="@{previousCourseOfferingWrapper != null}"/>
                                    <bean parent="Uif-ActionLink" p:methodToCall="loadCOs" p:actionLabel="List All" />
                                    <bean parent="Uif-Label" p:labelText="|" p:renderColon="false" p:render="@{nextCourseOfferingWrapper != null}"/>
                                    <bean parent="Uif-ActionLink" p:methodToCall="loadNextCO" p:actionLabel="@{nextCourseOfferingWrapper != null ? nextCourseOfferingWrapper.courseOfferingCode : ''} &gt;" p:render="@{nextCourseOfferingWrapper != null}"/>
                                </list>
                            </property>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-CourseOfferingLinks"/>
                <ref bean="KS-CourseOfferingManagement-AO-ToolBarSection"/>
                <!--<bean parent="Uif-MessageField" p:render="@{currentCourseOfferingWrapper.crossListed}" p:messageText="You do not have permission to edit this course. Contact the owning department for more information.[br][b]Owner:[/b] @{currentCourseOfferingWrapper.coOwningDeptName}" p:style="background-color:#C8E4F7; padding-top:4px; padding-bottom:4px;"/>-->
                <ref bean="KS-CourseOfferingManagement-AddActivityOfferingPopupForm"/>
                <ref bean="KS-CourseOfferingManagement-ActivityOfferingListSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-AddActivityOfferingPopupForm" parent="Uif-HorizontalBoxSection">
        <property name="render" value="@{enableAddButton}"/>
        <property name="hidden" value="true"/>
        <property name="cssClasses">
            <list>
                <value>uif-bubblepopup-content</value>
            </list>
        </property>
        <property name="style" value="margin-bottom:0;padding-left:10px;padding-right:10px;"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="formatIdForNewAO" p:label="Format" p:labelPlacement="TOP" p:required="true">
                    <property name="readOnly" value="false"/>
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:disabled="@{!#root.editAuthz}"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.FormatsForCreateAOKeyValues" p:addBlankOption="false" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="activityIdForNewAO" p:label="Activity Type" p:labelPlacement="TOP"
                      p:required="true"  p:forceSessionPersistence="true" p:refreshWhenChangedPropertyNames="formatIdForNewAO">
                    <!-- KRAD 2.2.0 Bug: class uif-boxLayoutHorizontalItem is removed on refresh: -->
                    <property name="cssClasses">
                        <list merge="true">
                            <value>uif-boxLayoutHorizontalItem</value>
                        </list>
                    </property>
                    <property name="readOnly" value="false"/>
                    <property name="control">
                        <bean parent="Uif-DropdownControl" p:disabled="@{!#root.editAuthz}"/>
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.enrollment.class2.courseoffering.keyvalue.ActivitiesForCreateAOKeyValues" p:addBlankOption="false" />
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="noOfActivityOfferings" p:label="Quantity" p:labelPlacement="TOP" p:required="true">
                    <property name="readOnly" value="false"/>
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="3" p:disabled="@{!#root.editAuthz}"/>
                    </property>
                </bean>
                <bean parent="Uif-SecondaryActionButton-Small">
                    <property name="style" value="margin-top:1.5em;"/>
                    <property name="actionLabel" value="Add"/>
                    <property name="performClientSideValidation" value="true" />
                    <property name="methodToCall" value="addActivityOfferings"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-CourseOfferingLinks" parent="Uif-HorizontalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-LinkGroup">
                    <property name="items">
                        <list>
                            <bean parent="Uif-HorizontalBoxSection">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-DataField" p:propertyName="coViewLinkWrapper" p:defaultValue="View">
                                            <property name="inquiry">
                                                <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingEditWrapper" p:inquiryParameters="currentCourseOfferingWrapper.courseOfferingId" />
                                            </property>
                                        </bean>
                                        <bean parent="Uif-HorizontalBoxSection" >
                                            <property name="headerText" value=""/>
                                            <property name="disclosure.render" value="false"/>
                                            <property name="items">
                                                <list>
                                                    <bean id="edit_co" parent="Uif-ActionLink" p:methodToCall="editTheCO" p:actionLabel=" | Edit" p:disabled="@{#parent.readOnly}" p:componentSecurity.performActionAuthz="true" p:actionEvent="editCO"/>
                                                    <bean id="delete_co" parent="Uif-ActionLink" p:id="ActivityOfferingResultSection-deleteOneCoWithLink" p:methodToCall="deleteOneCoWithLink" p:actionLabel=" | Delete" p:disabled="@{#parent.readOnly}" p:render = "@{currentCourseOfferingWrapper.stateKey eq 'kuali.lui.state.draft' or currentCourseOfferingWrapper.stateKey eq 'kuali.lui.course.offering.state.draft' or currentCourseOfferingWrapper.stateKey eq 'kuali.lui.course.offering.state.planned'  or currentCourseOfferingWrapper.stateKey eq 'kuali.lui.activity.offering.state.offered' or currentCourseOfferingWrapper.stateKey eq 'kuali.lui.course.offering.state.offered'}" p:componentSecurity.performActionAuthz="true" p:actionEvent="deleteCO" />
                                                    <bean id="manage_reg_group" parent="Uif-ActionLink" p:methodToCall="manageRegGroups" p:actionLabel=" | Manage Registration Groups" p:disabled="@{#parent.readOnly}"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-Schedule-DisplayField" parent="Uif-MessageField" p:cssClasses="font-light12" abstract="true">
        <property name="propertyReplacers">
            <list>
                <bean parent="Uif-ConditionalBeanPropertyReplacer" p:propertyName="style"
                      p:condition="#line.aoInfo.scheduleId == null" p:replacement="color:grey;"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-ActivityOfferingListSection" parent="Uif-TableCollectionSection"
          p:layoutManager.numberOfColumns="3"  p:readOnly="@{#parent.readOnly}" p:renderAddLine="false"
          p:onDocumentReadyScript="ksAddRowSelectionCheckbox(@{#parent.readOnly},'KS-CourseOfferingManagement-ActivityOfferingListSection',null,handleAOToolbar);removeColumns(@{#parent.readOnly}, [1], 'KS-CourseOfferingManagement-ActivityOfferingListSection');">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="propertyName" value="activityWrapperList" />
        <property name="header.render" value="false"/>
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="isChecked" p:required="false" p:onChangeScript="handleAOToolbar();">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:disabled="false"/>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:fieldLabel.labelText="CODE">
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:propertyName="aoInfo.activityCode" p:fieldLabel.render="false">
                                <property name="inquiry">
                                    <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" p:inquiryParameters="aoInfo.id" />
                                </property>
                            </bean>
                            <bean parent="Uif-ImageField" p:hidden="@{#lp.colocatedAoInfo.isEmpty()}"
                                  p:image.altText="@{#line.colocatedAoInfoUI}"
                                  p:source="@{#ConfigProperties['ks.externalizable.images.url']}/colocate_icon.png">
                                <property name="style" value="padding-left:5px"/>
                                <property name="toolTip">
                                    <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="@{#lp.colocatedAoInfoUI}"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="STATUS" p:propertyName="stateName" />
                <bean parent="Uif-DataField" p:label="TYPE" p:propertyName="typeName"/>
                <bean parent="Uif-DataField" p:label="FORMAT" p:propertyName="aoInfo.formatOfferingName"/>
                <bean parent="KS-Schedule-DisplayField" p:label="TBA" p:messageText="@{#line.tbaDisplayName}"/>
                <bean parent="KS-Schedule-DisplayField" p:label="DAYS" p:messageText="@{#line.daysDisplayName}" />
                <bean parent="KS-Schedule-DisplayField" p:label="START TIME" p:messageText="@{#line.startTimeDisplay}" />
                <bean parent="KS-Schedule-DisplayField" p:label="END TIME" p:messageText="@{#line.endTimeDisplay}" />
                <bean parent="KS-Schedule-DisplayField" p:label="FACILITY" p:messageText="@{#line.buildingName}"/>
                <bean parent="KS-Schedule-DisplayField" p:label="ROOM" p:messageText="@{#line.roomName}"/>
                <bean parent="Uif-DataField" p:label="INSTRUCTOR" p:propertyName="firstInstructorDisplayName"/>
                <bean parent="Uif-DataField" p:label="MAX ENR" p:propertyName="aoInfo.maximumEnrollment"/>
                <bean name="enableApproveButton" parent="Uif-InputField" p:propertyName="enableApproveButton"/>
                <bean name="enableDraftButton" parent="Uif-InputField" p:propertyName="enableDraftButton"/>
                <bean name="enableSuspendButton" parent="Uif-InputField" p:propertyName="enableSuspendButton"/>
                <bean name="enableCancelButton" parent="Uif-InputField" p:propertyName="enableCancelButton"/>
                <bean name="enableReinstateButton" parent="Uif-InputField" p:propertyName="enableReinstateButton" />
                <bean name="enableDeleteButton" parent="Uif-InputField" p:propertyName="enableDeleteButton" />
                <bean name="enableCopyAOActionLink" parent="Uif-InputField" p:propertyName="enableCopyAOActionLink" />
                <bean name="enableEditAOActionLink" parent="Uif-InputField" p:propertyName="enableEditAOActionLink" />
            </list>
        </property>
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[1,'desc']]"/>
                <entry key="bPaginate" value="false"/>
                <entry key="bAutoWidth" value="false"/>
            </map>
        </property>
        <property name="layoutManager.richTable.hiddenColumns">
            <set>
                <value>enableApproveButton</value>
                <value>enableDraftButton</value>
                <value>enableSuspendButton</value>
                <value>enableCancelButton</value>
                <value>enableReinstateButton</value>
                <value>enableDeleteButton</value>
                <value>enableCopyAOActionLink</value>
                <value>enableEditAOActionLink</value>
            </set>
        </property>
        <property name="layoutManager.actionFieldPrototype">
            <bean parent="Uif-HorizontalFieldGroup" p:align="left" p:required="false" p:label="Actions"/>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="Uif-NavigationActionLink" p:methodToCall="copyAO" p:actionLabel="Copy"
                      p:render="@{#line.isEnableCopyAOActionLink()}" p:actionEvent="copyAOonManageAOsPage"
                      p:style="padding-right:3px;" />
                <bean parent="Uif-NavigationActionLink" p:methodToCall="edit" p:actionLabel="Edit"
                      p:render="@{#line.isEnableEditAOActionLink()}" p:actionEvent="editAOonManageAOsPage" />
            </list>
        </property>
    </bean>
</beans>
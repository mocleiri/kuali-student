<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="CoreProgramInfo" parent="CoreProgramInfo-parentBean"/>
    <bean id="CoreProgramInfo-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="objectLabel" value="Program Info"/>
        <property name="dataObjectClass" value="org.kuali.student.r2.lum.program.dto.CoreProgramInfo"/>
        <property name="titleAttribute" value="id"/>
        <property name="attributes">
            <list>
                <ref bean="CoreProgramInfo.shortTitle"/>
                <ref bean="CoreProgramInfo.code" />
                <ref bean="CoreProgramInfo.descr"/>
            </list>
        </property>
        <property name="primaryKeys">
            <list>
                <value>id</value>
            </list>
        </property>
    </bean>

    <bean id="CoreProgramInfo.shortTitle" parent="CoreProgramInfo.shortTitle-parent"/>
    <bean id="CoreProgramInfo.shortTitle-parent" abstract="true" parent="AttributeDefinition">
        <property name="name" value="shortTitle"/>
        <property name="dataType" value="STRING" />
        <property name="label" value="Program Title"/>
        <property name="shortLabel" value="Program Title"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="30"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="30"/>
        </property>
    </bean>
    <bean id="CoreProgramInfo.code" parent="CoreProgramInfo.code-parent"/>
    <bean id="CoreProgramInfo.code-parent" abstract="true" parent="AttributeDefinition">
    <property name="name" value="code"/>
    <property name="dataType" value="STRING" />
    <property name="label" value="Program Code(Subject/Number)"/>
    <property name="shortLabel" value="Program Code"/>
    <property name="forceUppercase" value="false"/>
    <property name="maxLength" value="30"/>
    <property name="validCharactersConstraint">
        <bean parent="AnyCharacterPatternConstraint"/>
    </property>
    <property name="controlField">
        <bean parent="Uif-TextControl" p:size="30"/>
    </property>
    </bean>

    <bean id="CoreProgramInfo.descr" parent="CoreProgramInfo.descr-parentBean"/>
    <bean id="CoreProgramInfo.descr-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="descr"/>
        <property name="dataType" value="STRING" />
        <property name="label" value="Phase in Description"/>
        <property name="shortLabel" value="Phase in Description"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="30"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="30"/>
        </property>
    </bean>

    <bean id="KRMS-Program-LookupView" parent="KSLookupView">
        <property name="id" value="ProgramLookupView"/>
        <!--<property name="viewName" value="krmsProgramOnlyLookup"/>-->
        <property name="headerText" value="Advanced Search: Programs Only" />
        <property name="dataObjectClassName" value="org.kuali.student.r2.lum.program.dto.CoreProgramInfo" />
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class1.krms.service.impl.ProgramInfoLookupableImpl" />
        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="shortTitle"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="code"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="descr"/>

            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-InputField" p:propertyName="shortTitle">
                    <property name="label" value="Name"/>
                    <property name="shortLabel" value="Name"/>
                 </bean>
                <bean parent="Uif-InputField" p:propertyName="code" />

                <bean parent="Uif-InputField" p:propertyName="state">
                    <property name="label" value="State"/>
                    <property name="shortLabel" value="State"/>
               </bean>
                <bean parent="Uif-InputField" p:propertyName="descr.plain">
                    <property name="label" value="Description"/>
                    <property name="shortLabel" value="Description"/>
                </bean>

            </list>
        </property>
    </bean>

</beans>
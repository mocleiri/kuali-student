<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- LookupView -->
   <bean id="KS-ActivityOfferingWrapper-LookupView" parent="KSLookupView">
        <property name="headerText" value="ActivityOffering Lookup " />
        <property name="dataObjectClassName" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="viewHelperServiceClass" value="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingWrapperLookupableImpl" />

        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="courseOfferingCode" p:readOnly="true"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-DataField"
                      p:label="CODE"
                      p:propertyName="aoInfo.activityCode">
                    <property name="inquiry">
                        <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" p:inquiryParameters="aoInfo.id" />
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="STATUS" p:propertyName="stateName" />
                <bean parent="Uif-DataField" p:label="TYPE" p:propertyName="typeName"/>
                <bean parent="Uif-DataField" p:label="FORMAT" p:propertyName="aoInfo.formatOfferingName"/>
                <bean parent="KS-Schedule-DisplayField" p:label="TBA" p:messageText="@{#line.tbaDisplayName}"/>
                <bean parent="KS-Schedule-DisplayField" p:label="DAYS" p:messageText="@{#line.daysDisplayName}" />
                <bean parent="KS-Schedule-DisplayField" p:label="START TIME" p:messageText="@{#line.startTimeDisplay}" />
                <bean parent="KS-Schedule-DisplayField" p:label="END TIME" p:messageText="@{#line.endTimeDisplay}" />
                <bean parent="KS-Schedule-DisplayField" p:label="FACILITY" p:messageText="@{#line.buildingName}"/>
                <bean parent="KS-Schedule-DisplayField" p:label="ROOM" p:messageText="@{#line.roomName}"/>
                <bean parent="Uif-DataField" p:label="INSTRUCTOR" p:propertyName="firstInstructorDisplayName"/>
                <bean parent="Uif-DataField" p:label="MAX ENR" p:propertyName="aoInfo.maximumEnrollment"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ActivityOfferingWrapper-InquiryView" parent="KSInquiryView"
          p:headerText="Activity Offering Inquiry"
          p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper"
          p:viewHelperServiceClass="org.kuali.student.enrollment.class2.courseoffering.service.impl.ActivityOfferingWrapperInquirableImpl">
        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-enroll/css/activityOffering.css</value>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/activity-offering.js</value>
            </list>
        </property>
        <property name="page.header">
            <ref bean="KSHeader_Empty" />
        </property>
        <property name="Items">
            <list>
                <bean parent="Uif-HeaderFour" p:headerText="@{dataObject.courseOfferingCode} - @{dataObject.courseOfferingTitle} (@{dataObject.credits} Credits)"/>
                <bean parent="Uif-HeaderThree" p:headerText="Activity Offering: @{dataObject.activityCode} (@{dataObject.abbreviatedCourseType})"/>
                <ref bean="ActivityOfferingEdit-MainPage-section1"/>
                <ref bean="ActivityOfferingEdit-MainPage-section2"/>
                <ref bean="ActivityOffering-Inquiry-DeliveryLogistic-Actuals"/>
                <ref bean="ActivityOffering-Inquiry-DeliveryLogistic-Requested"/>
                <ref bean="ActivityOfferingEdit-MainPage-PersonnelSection"/>
                <ref bean="ActivityOfferingEdit-MainPage-SeatPool"/>
                <ref bean="KS-ActivityOffering-Inquiry-HonorsOffering"/>
                <ref bean="KS-ActivityOffering-Inquiry-Evaluation"/>
                <ref bean="ActivityOfferingEdit-Inquiry-MainPage-Miscellaneous"/>
            </list>
        </property>
    </bean>
    <bean id="ActivityOffering-Inquiry-DeliveryLogistic-Actuals" parent="Uif-TableCollectionSection"
          p:headerText="Actual Delivery Logistics"
          p:collectionObjectClass="org.kuali.student.enrollment.class2.courseoffering.dto.ScheduleWrapper"
          p:propertyName="actualScheduleComponents"
          p:readOnly="true"
          p:layoutManager.renderSequenceField="false">
        <property name="layoutManager.richTable.render" value="false" />
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="TBA" p:propertyName="tbaUI" p:readOnly="true" p:control.size="5">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Days" p:propertyName="daysUI" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="5"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Start Time" p:propertyName="startTimeUI" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="5"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="End Time" p:propertyName="endTimeUI" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="5"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Facility" p:propertyName="buildingName" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Room" p:propertyName="roomCode" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="5"/>
                    </property>
                </bean>
                <!--<bean parent="Uif-InputField" p:label="Capacity" p:propertyName="roomCapacity" p:readOnly="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="5"/>
                    </property>
                </bean>-->
                <bean parent="Uif-MessageField" p:messageText="F" p:label="Features">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="N/A"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="ActivityOffering-Inquiry-DeliveryLogistic-Requested" parent="Uif-TableCollectionSection"
          p:collectionObjectClass="org.kuali.student.enrollment.class2.courseoffering.dto.ScheduleWrapper"
          p:propertyName="requestedScheduleComponents"
          p:renderAddLine="false"
          p:layoutManager.renderSequenceField="false">
        <property name="headerText" value="Requested Delivery Logistics"/>
        <property name="layoutManager.richTable.render" value="false" />
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="TBA" p:propertyName="tbaUI" p:readOnly="true" p:control.size="5">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Days" p:propertyName="daysUI" p:readOnly="true" p:control.size="5">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Start Time" p:propertyName="startTimeUI" p:readOnly="true" p:control.size="5">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="End Time" p:propertyName="endTimeUI" p:readOnly="true" p:control.size="5">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Facility" p:propertyName="buildingName" p:readOnly="true" p:control.size="20">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Room" p:propertyName="roomName" p:readOnly="true" p:control.size="5">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>
                <!--<bean parent="Uif-InputField" p:label="Capacity" p:propertyName="roomCapacity" p:readOnly="true" p:control.size="5">
                    <property name="control">
                        <bean parent="Uif-TextControl"/>
                    </property>
                </bean>-->
                <bean parent="Uif-MessageField" p:messageText="F" p:label="Features">
                    <property name="toolTip">
                        <bean parent="Uif-TooltipFocus" p:onMouseHover="true" p:tooltipContent="N/A"/>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ActivityOffering-Inquiry-HonorsOffering" parent="Uif-VerticalBoxSection" p:style="margin-top: 2em;" p:render="false">
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:messageText=""/>
                <bean parent="Uif-InputField" p:propertyName="aoInfo.isHonorsOffering" p:label="Honors Flag" p:fieldLabel.renderColon="false" p:labelPlacement="LEFT">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl">
                            <property name="checkboxLabel" value="This is an Honors Course"/>
                        </bean>
                    </property>

                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ActivityOffering-Inquiry-Evaluation" parent="Uif-VerticalBoxSection" p:style="margin-top: 2em;" p:render="false">
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:messageText=""/>
                <bean parent="Uif-InputField" p:propertyName="aoInfo.isEvaluated" p:label="Evaluation" p:fieldLabel.renderColon="false" p:labelPlacement="LEFT">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl">
                            <property name="checkboxLabel" value="This lecture requires an evaluation"/>
                        </bean>
                    </property>

                </bean>
            </list>
        </property>
    </bean>

    <bean id="ActivityOfferingEdit-Inquiry-MainPage-Miscellaneous" parent="Uif-VerticalBoxSection" p:headerText="Miscellaneous" p:id="aoInfo.Miscellaneous">
        <property name="items">
            <list>
                <bean parent="Uif-InputField-LabelTop"
                      p:propertyName="aoInfo.activityOfferingURL"
                      p:label="Course URL">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:size="30"/>
                    </property>
                </bean>
                <bean parent="Uif-VerticalFieldGroup"
                      p:label="Evaluation"
                      p:fieldLabel.renderColon="false"
                      p:style="margin-bottom:0">
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField" p:messageText="@{(dataObject.aoInfo.isEvaluated eq null or !dataObject.aoInfo.isEvaluated) ? '':'This lecture requires an evaluation'}" />
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-VerticalFieldGroup"
                      p:label="Honors Flag"
                      p:fieldLabel.renderColon="false"
                      p:style="margin-bottom:0">
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField" p:messageText="@{(dataObject.aoInfo.isHonorsOffering eq null or !dataObject.aoInfo.isHonorsOffering) ? '':'This is an honors course'}" />
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CurriculumHome-View" parent="KS-Uif-FormView">
        <property name="id" value="curriculumHomeView"/>
        <property name="headerText" value="Curriculum"/>
        <property name="formClass" value="org.kuali.student.cm.main.form.LaunchForm"/>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-curriculum-home</value>
            </list>
        </property>

        <!-- CSS Styling -->
        <property name="additionalCssFiles">
            <list merge="true">
                <value>ks-cm-krad/css/cm.css</value>
            </list>
        </property>
        <!-- Custom JavaScript -->
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-cm-krad/scripts/jquery.jqEasyCharCounter.custom.js</value>
                <value>ks-cm-krad/scripts/common.js</value>
            </list>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-Page" p:disclosure.render="false">
                    <property name="items">
                        <list>
                            <ref bean="KS-CurriculumHome-Create"/>
<!--                             <ref bean="KS-CurriculumHome-Find"/> -->
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
    <bean id="KS-CurriculumHome-Create" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Create"/>
        <property name="cssClasses">
            <list merge="true">
                <value>ks-curriculum-home-group</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Link" p:linkText="Create a Course"
                      p:href="@{#ConfigProperties['application.url']}/kr-krad/courses?methodToCall=docHandler&amp;command=initiate&amp;docTypeName=kuali.proposal.type.course.create&amp;dataObjectClassName=org.kuali.student.r2.lum.course.dto.CourseInfo&amp;hideReturnLink=true"/>
            </list>
        </property>
    </bean>


<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="KS-CourseView-SupportingDocumentsPage" parent="Uif-MaintenancePage"
		  p:headerText="Supporting Documents" p:disclosure.render="false">
        <property name="header" ref="KS-CourseView-Header" />
        <property name="items">
            <list> 
                <ref bean="KS-CourseView-SupportingDocumentsPage-Widgets" /> 
            </list> 
        </property> 
        <property name="footer">
            <bean parent="KS-CourseView-Footer"/>
        </property>
	</bean>

    <bean id="KS-CourseView-SupportingDocumentsPage-Widgets" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <ref bean="KS-SupportingDocuments-Section" />
            </list>
        </property>
    </bean>



	<bean id="KS-SupportingDocuments-Section" parent="Uif-StackedCollectionSection"
		  p:headerText="Supporting Document(s)" p:propertyName="supportingDocuments"
		  p:collectionObjectClass="org.kuali.student.cm.course.form.SupportingDocumentInfoWrapper">
		<property name="addLineLabel.messageText" value="Include More Files" />
		<property name="layoutManager.lineGroupPrototype.header.headerText"
				  value="File @{(#index + 1)}" />
		<!-- <property name="collectionLookup.quickfinderAction.render"
				  value="false" /> -->
		<property name="help">
			<bean parent="Uif-Help"
				  p:tooltipHelpContent="This is not a restrictive list - names here will not determine who will eventually teach this course." />
		</property>
		<property name="cssClasses">
			<list merge="true">
				<value>cm-collection-width</value>
			</list>
		</property>
		<property name="addLineActions">
			<list>
				<bean parent="Uif-AddLineAction" p:actionLabel="Include More Files" />
			</list>
		</property>
		<property name="items">
			<list>
				<bean parent="Uif-InputField" p:propertyName="documentUpload">
                    <property name="control">
                        <bean parent="Uif-FileControl" p:size="30"/>
                    </property>
				</bean>
			</list>
		</property>
	</bean>
</beans>

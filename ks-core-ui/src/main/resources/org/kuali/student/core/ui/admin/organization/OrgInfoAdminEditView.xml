<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KS-OrgInfoEdit-View" parent="Uif-Page" p:headerText="Organization Detail">
		<property name="items">
			<list>
				<ref bean="KS-OrgInfoEdit-Section" />
			</list>
		</property>
	</bean>
	<bean id="KS-OrgInfoEdit-Section" parent="Uif-VerticalBoxSection" p:width="550px">
		<property name="items">
			<list>
				<bean parent="Uif-GridGroup">
	                <property name="layoutManager.numberOfColumns" value="2"/>
	                <property name="layoutManager.applyDefaultCellWidths" value="false" />
	                <property name="style" value="margin-bottom:0;"/>
	                <property name="items">
						<list>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="orgInfo.shortName" p:label="Abbreviation" p:required="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="orgInfo.longName" p:label="Department">								
							</bean>							
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;" p:readOnly="true"
								p:propertyName="orgInfo.typeInfo.name" p:label="Type" p:required="true">								
							</bean>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="orgInfo.stateInfo.key" p:label="State" p:required="true">
								<property name="control">
            						<bean parent="Uif-DropdownControl"/>
          						</property>
          						<property name="optionsFinder">
					            	<bean class="org.kuali.student.core.organization.ui.lookup.keyvalues.OrgInfoStateKeyValues"/>
					          	</property>
							</bean>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="orgInfo.effectiveDate" p:label="Effective Date" p:required="true" >
								<property name="control">
            						<bean parent="Uif-DateControl"/>
          						</property>
							</bean>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="orgInfo.expirationDate" p:label="Expiration Date" >
								<property name="control">
            						<bean parent="Uif-DateControl"/>
          						</property>
							</bean>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="orgInfo.longDescr.plain" p:label="Description" >		
								<property name="control">
            						<bean parent="Uif-LargeTextAreaControl" p:watermarkText="Organization Description"/>
          						</property>					
							</bean>
							<bean parent="Uif-InputField"  p:style="align: right;"
								p:propertyName="orgInfo.meta.createId" p:label="Created By" p:readOnly="true"/>
							<bean parent="Uif-InputField"  p:style="align: right;"
								p:propertyName="orgInfo.meta.createTime" p:label="Date Created" p:readOnly="true"/>
							<bean parent="Uif-InputField"  p:style="align: right;"
								p:propertyName="orgInfo.meta.updateId" p:label="Last Updated By" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT"  
								p:propertyName="orgInfo.meta.updateTime" p:label="Last Update" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT"  
								p:propertyName="orgInfo.id" p:label="Identifier" p:readOnly="true"/>
						</list>
					</property>
				</bean>				
				<bean parent="Uif-HorizontalFieldGroup">
					<property name="items">
						<list>
							<bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="update" p:actionLabel="Save" />
							<bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="cancel" p:actionLabel="Cancel" 
									p:actionParameters="returnViewName:KS-OrgInfoDetail-View"/>
						</list>
					</property>
				</bean>	
			</list>
		</property>
	</bean>
</beans>
<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KS-OrgPersonRelationInfoEdit-View" parent="Uif-Page" p:headerText="Organization Detail">
		<property name="items">
			<list>
				<ref bean="KS-OrgPersonRelationInfoEdit-Section" />
			</list>
		</property>
	</bean>
	<bean id="KS-OrgPersonRelationInfoEdit-Section" parent="Uif-VerticalBoxSection" p:width="500px">
		<property name="items">
			<list>
				<bean parent="Uif-GridGroup">
	                <property name="layoutManager.numberOfColumns" value="2"/>
	                <property name="layoutManager.applyDefaultCellWidths" value="false" />
	                <property name="style" value="margin-bottom:0;"/>
	                <property name="items">
						<list>
							<bean parent="Uif-InputField" p:style="align: right;"
								p:propertyName="selectedOrgPersonRelation.personName" p:label="Person" p:readOnly="true" />
							<bean parent="Uif-InputField"  p:style="align: right;"
								p:propertyName="selectedOrgPersonRelation.typeInfo.name" p:label="Type" p:readOnly="true">
								<property name="control">
            						<bean parent="Uif-DropdownControl"/>
          						</property>
          						<property name="optionsFinder">
					            	<bean class="org.kuali.rice.student.lookup.keyvalues.DepartmentOrgValuesFinder"/>
					          	</property>
							</bean>
							<bean parent="Uif-InputField"  p:style="align: right;" p:propertyName="selectedOrgPersonRelation.stateInfo.name" p:label="State" />
							<bean parent="Uif-InputField"  p:style="align: right;"	p:propertyName="selectedOrgPersonRelation.effectiveDate" p:label="Effective Date" >
								<property name="control">
            						<bean parent="Uif-DateControl"/>
          						</property>
							</bean>
							<bean parent="Uif-InputField"  p:style="align: right;"
								p:propertyName="selectedOrgPersonRelation.expirationDate" p:label="Expiration Date">
								<property name="control">
            						<bean parent="Uif-DateControl"/>
          						</property>
							</bean>
							<bean parent="Uif-InputField"  p:style="align: right;"
								p:propertyName="selectedOrgPersonRelation.meta.createId" p:label="Created By" p:readOnly="true"/>
							<bean parent="Uif-InputField"  p:style="align: right;"
								p:propertyName="selectedOrgPersonRelation.meta.createTime" p:label="Date Created" p:readOnly="true"/>
							<bean parent="Uif-InputField"  p:style="align: right;"
								p:propertyName="selectedOrgPersonRelation.meta.updateId" p:label="Last Updated By" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT"  
								p:propertyName="selectedOrgPersonRelation.meta.updateTime" p:label="Last Update" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT"  
								p:propertyName="selectedOrgPersonRelation.id" p:label="Identifier" p:readOnly="true"/>
						</list>
					</property>
				</bean>				
				<bean parent="Uif-HorizontalFieldGroup">
					<property name="items">
						<list>
							<bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="save" p:actionLabel="Save" />
							<bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="cancel" p:actionLabel="Cancel" 
									p:actionParameters="returnViewName:KS-OrgPersonRelationInfoDetail-View"/>
						</list>
					</property>
				</bean>	
			</list>
		</property>
	</bean>
</beans>
	<import resource="classpath:ks-OrgHierarchyInfo-dictionary.xml"/>
	<import resource="classpath:UifKSDefinitions.xml"/>
	<!-- **********************************************
	Paste bean definition below into the list of dataDictionaryPackages in StudentSpringBeans.xml 
	<value>classpath:org/kuali/student/core/ui/admin/organization/OrgHierarchyInfoAdminInquiryView.xml</value>
	********************************************** -->
	<!-- InquiryView -->
	<bean id="KS-OrgHierarchyInfo-AdminInquiryView" parent="KS-Uif-InquiryView"
		p:title="OrgHierarchyInfo Inquiry"
		p:dataObjectClassName="org.kuali.student.r2.core.organization.dto.OrgHierarchyInfo"
		p:viewHelperServiceClass="org.kuali.student.core.ui.admin.organization.OrgHierarchyInfoAdminInquirableImpl">
		
		<property name="Items">
		    <list>
		        <bean parent="Uif-Disclosure-GridSection">
		            <property name="layoutManager.numberOfColumns" value="2"/>
		            <property name="headerText" value="OrgHierarchyInfo Inquiry"/>
		            <property name="items">
		                <list>
		                    <bean parent="Uif-DataField" p:propertyName="id" />
		                    <bean parent="Uif-DataField" p:propertyName="typeKey">
		                        <property name="inquiry">
		                            <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.r2.core.class1.type.dto.TypeInfo" p:inquiryParameters="typeKey:key" />
		                        </property>
		                    </bean>
		                    <bean parent="Uif-DataField" p:propertyName="stateKey">
		                        <property name="inquiry">
		                            <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.r2.core.class1.state.dto.StateInfo" p:inquiryParameters="stateKey:key" />
		                        </property>
		                    </bean>
		                    <bean parent="Uif-DataField" p:propertyName="name" />
		                    <bean parent="Uif-DataField" p:propertyName="descr.plain" />
		                    <bean parent="Uif-DataField" p:propertyName="descr.formatted" />
		                    <bean parent="Uif-DataField" p:propertyName="rootOrgId" />
		                    <!-- TODO: deal with orgOrgRelationTypes which is a list -->
		                    <bean parent="Uif-DataField" p:propertyName="effectiveDate" />
		                    <bean parent="Uif-DataField" p:propertyName="expirationDate" />
		                    <bean parent="Uif-DataField" p:propertyName="meta.versionInd" />
		                    <bean parent="Uif-DataField" p:propertyName="meta.createTime" />
		                    <bean parent="Uif-DataField" p:propertyName="meta.createId" />
		                    <bean parent="Uif-DataField" p:propertyName="meta.updateTime" />
		                    <bean parent="Uif-DataField" p:propertyName="meta.updateId" />
		                    <!-- TODO: deal with dynamic attributes -->
		                </list>
		            </property>
		        </bean>
		    </list>
		</property>
	</bean>
	
</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KS-OrgInfoDetail-View" parent="Uif-Page" p:headerText="Organization Detail">
		<property name="items">
			<list>
				<ref bean="KS-OrgInfoDetail-Section" />
			</list>
		</property>
	</bean>
	<bean id="KS-OrgInfoDetail-Section" parent="Uif-VerticalBoxSection" p:width="550px">
		<property name="items">
			<list>
				<bean parent="Uif-GridGroup">
	                <property name="layoutManager.numberOfColumns" value="2"/>
	                <property name="layoutManager.applyDefaultCellWidths" value="false" />
	                <property name="style" value="margin-bottom:0;"/>
	                <property name="items">
                        <list>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.shortName" p:label="Abbreviation" p:readOnly="true" />
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.longName" p:label="Department" p:readOnly="true"/>
					        <bean parent="Uif-DataField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true"
								p:propertyName="selectedOrg.typeInfo.name" p:label="Type" />
							<bean parent="Uif-DataField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true"
								p:propertyName="selectedOrg.stateInfo.name" p:label="State" />							
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.effectiveDate" p:label="Effective Date" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.expirationDate" p:label="Expiration Date" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.longDescr.plain" p:label="Description" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.meta.createId" p:label="Created By" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.meta.createTime" p:label="Date Created" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.meta.updateId" p:label="Last Updated By" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.meta.updateTime" p:label="Last Update" p:readOnly="true"/>
							<bean parent="Uif-InputField" p:labelPlacement="LEFT" p:fieldLabel.renderColon="true" p:style="align: right;"
								p:propertyName="selectedOrg.id" p:label="Identifier" p:readOnly="true"/>
						</list>
					</property>
				</bean>				
				<bean parent="Uif-HorizontalFieldGroup">
					<property name="items">
						<list>
							<bean parent="Uif-SecondaryActionButton-Small" p:actionLabel="Edit" p:navigateToPageId="KS-OrgInfoEdit-View" />
							<bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="copy" p:actionLabel="Copy" 
							p:actionParameters="selectedOrgId:@{selectedOrg.id}" p:ajaxSubmit="false" />
							<bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="delete" p:actionLabel="Delete" 
							p:actionParameters="selectedOrgId:@{selectedOrg.id}" p:ajaxSubmit="false" /> 
							<bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="cancel" p:actionLabel="Cancel" 
							p:actionParameters="returnViewName:KS-OrgInfoSearch-View"/>
						</list>
					</property>
				</bean>	
			</list>
		</property>
	</bean>
</beans>
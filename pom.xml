<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.kuali.pom</groupId>
        <artifactId>kuali-common</artifactId>
        <version>2.1.41</version>
    </parent>
    <groupId>org.kuali.student</groupId>
    <artifactId>student</artifactId>
    <version>2.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Kuali Student</name>
    <modules>
        <module>ks-core</module>
        <module>ks-lum</module>
        <module>ks-enroll</module>
        <module>ks-deployments</module>
    </modules>
    <properties>
        <oracle.version>10.2.0.3.0</oracle.version>
        <oracle.artifact>ojdbc14</oracle.artifact>
        <mysql.version>5.1.18</mysql.version>
        <kuali.rice.version>2.2.0</kuali.rice.version>
        <kuali.deploy.version>2.0.19</kuali.deploy.version>
        <kuali-jdbc.version>1.0.7</kuali-jdbc.version>
        <kuali.util.version>3.0.4</kuali.util.version>
        <ks.core.version>2.0.0-SNAPSHOT</ks.core.version>
        <ks.enroll.version>1.0.0-SNAPSHOT</ks.enroll.version>
        <ks.lum.version>2.0.0-SNAPSHOT</ks.lum.version>
        <plugin.mvn.version>1.1.0</plugin.mvn.version>
        <plugin.metainf.version>2.0.0</plugin.metainf.version>
        <!-- Properties for the meta-inf plugin to create lists of sql file locations -->
        <sql.meta.input.base>${project.build.outputDirectory}</sql.meta.input.base>
        <sql.meta.output.base>${project.build.outputDirectory}/META-INF/sql/${db.vendor}/${project.artifactId}</sql.meta.output.base>
        <sql.schema.include>**/initial-db/**/ks-*create-schema.sql</sql.schema.include>
        <sql.data.include>**/initial-db/**/data/*.sql</sql.data.include>
        <sql.constraints.include>**/initial-db/**/ks-*constraints.sql</sql.constraints.include>
    </properties>
    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.kuali.maven.plugins</groupId>
                    <artifactId>metainf-maven-plugin</artifactId>
                    <version>${plugin.metainf.version}</version>
                    <executions>
                        <execution>
                            <id>schema</id>
                            <goals>
                                <goal>metainf</goal>
                            </goals>
                            <configuration>
                                <include>${sql.schema.include}</include>
                                <outputFile>${sql.meta.output.base}-schema.resources</outputFile>
                            </configuration>
                        </execution>
                        <execution>
                            <id>data</id>
                            <goals>
                                <goal>metainf</goal>
                            </goals>
                            <configuration>
                                <include>${sql.data.include}</include>
                                <outputFile>${sql.meta.output.base}-data.resources</outputFile>
                            </configuration>
                        </execution>
                        <execution>
                            <id>constraints</id>
                            <goals>
                                <goal>metainf</goal>
                            </goals>
                            <configuration>
                                <include>${sql.constraints.include}</include>
                                <outputFile>${sql.meta.output.base}-constraints.resources</outputFile>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
    </build>
</project>

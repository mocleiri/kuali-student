<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.kuali.pom</groupId>
    <artifactId>kuali-common</artifactId>
    <version>2.1.41</version>
  </parent>
  <groupId>org.kuali.student</groupId>
  <artifactId>student</artifactId>
  <version>2.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Kuali Student</name>
  <modules>
    <module>ks-core</module>
    <module>ks-lum</module>
    <module>ks-enroll</module>
    <module>ks-deployments</module>
  </modules>
  <properties>
    <kuali-jdbc.version>2.0.0</kuali-jdbc.version>
    <sql.meta.base>${project.build.outputDirectory}/META-INF/sql/oracle/${project.artifactId}</sql.meta.base>
    <sql.schema.include>**/initial-db/**/ks-*create-schema.sql</sql.schema.include>
    <sql.data.include>**/initial-db/**/data/*.sql</sql.data.include>
    <sql.constraints.include>**/initial-db/**/ks-*constraints.sql</sql.constraints.include>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.kuali.maven.plugins</groupId>
          <artifactId>metainf-maven-plugin</artifactId>
          <version>2.0.0</version>
          <executions>
            <execution>
              <id>schema</id>
              <goals>
                <goal>metainf</goal>
              </goals>
              <configuration>
                <include>${sql.schema.include}</include>
                <outputFile>${sql.meta.base}-schema.resources</outputFile>
              </configuration>
            </execution>
            <execution>
              <id>data</id>
              <goals>
                <goal>metainf</goal>
              </goals>
              <configuration>
                <include>${sql.schema.include}</include>
                <outputFile>${sql.meta.base}-data.resources</outputFile>
              </configuration>
            </execution>
            <execution>
              <id>constraints</id>
              <goals>
                <goal>metainf</goal>
              </goals>
              <configuration>
                <include>${sql.constraints.include}</include>
                <outputFile>${sql.meta.base}-constraints.resources</outputFile>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
</project>

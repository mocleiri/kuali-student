<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
         monitoring="autodetect"
         updateCheck="false"
         Name="ksCacheManager"
         dynamicConfig="true" >

	<diskStore path="java.io.tmpdir" />
	<defaultCache
        maxElementsInMemory="10"
        eternal="false"
        timeToIdleSeconds="120"
        timeToLiveSeconds="120"
        overflowToDisk="true"
        statistics="true"
        />
	<cache name="enumCache"
           maxElementsInMemory="100"
           eternal="false"
           overflowToDisk="true"
           timeToIdleSeconds="0"
           timeToLiveSeconds="120"
           statistics="true"
        />
	<cache name="atpCache"
           maxElementsInMemory="100"
           eternal="false"
           overflowToDisk="true"
           timeToIdleSeconds="0"
           timeToLiveSeconds="120"
           statistics="true"
        />
	<cache name="orgCache"
           maxElementsInMemory="100"
           eternal="false"
           overflowToDisk="true"
           timeToIdleSeconds="0"
           timeToLiveSeconds="120"
           statistics="true"
        />
	<cache
        name="lrcCache"
        maxElementsInMemory="100"
        eternal="false"
        overflowToDisk="true"
        timeToIdleSeconds="0"
        timeToLiveSeconds="120"
        statistics="true"
        />
	<cache
        name="statementCache"
        maxElementsInMemory="100"
        eternal="false"
        overflowToDisk="true"
        timeToIdleSeconds="0"
        timeToLiveSeconds="120"
        statistics="true"
        />
    <cache
        name="luCache"
        maxElementsInMemory="10000"
        eternal="false"
        overflowToDisk="true"
        timeToIdleSeconds="0"
        timeToLiveSeconds="86400"
        statistics="true"
        />
    <cache
        name="searchFormCache"
        maxElementsInMemory="5000"
        eternal="false"
        overflowToDisk="true"
        timeToIdleSeconds="0"
        timeToLiveSeconds="12000"
        statistics="false"
        />
    <cache
        name="academicCalendarCache"
        maxElementsInMemory="100"
        eternal="false"
        overflowToDisk="true"
        timeToIdleSeconds="0"
        timeToLiveSeconds="12000"
        statistics="false"
        />
    <!--
    <cache name="courseSearchCache"
           maxElementsInMemory="5000"
           eternal="false"
           overflowToDisk="true"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           statistics="true"
            />
      -->
</ehcache>

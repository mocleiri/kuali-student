<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="CluSetInfo" parent="CluSetInfo-parentBean"/>
    <bean id="CluSetInfo-parentBean" abstract="true" parent="DataObjectEntry">
        <property name="objectLabel" value="Course Sets"/>
        <property name="dataObjectClass" value="org.kuali.student.r2.lum.clu.dto.CluSetInfo"/>
        <property name="titleAttribute" value="id"/>
        <property name="attributes">
            <list>
                <ref bean="cluSetInfo.id"/>
                <ref bean="cluSetInfo.name"/>
                <ref bean="cluSetInfo.descr"/>

            </list>
        </property>
        <property name="primaryKeys">
            <list>
                <value>id</value>
            </list>
        </property>
    </bean>

    <bean id="cluSetInfo.id" parent="cluSetInfo.id-parentBean"/>
    <bean id="cluSetInfo.id-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="id"/>
        <property name="dataType" value="STRING" />
        <property name="label" value="ID"/>
        <property name="shortLabel" value="Clu"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="35"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="30"/>
        </property>
    </bean>

    <bean id="cluSetInfo.name" parent="cluSetInfo.name-parentBean"/>
    <bean id="cluSetInfo.name-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="name"/>
        <property name="dataType" value="STRING" />
        <property name="label" value="Name"/>
        <property name="shortLabel" value="Clu"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="80"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"  p:allowWhitespace="true"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="35"/>
        </property>
    </bean>

    <bean id="cluSetInfo.descr" parent="cluSetInfo.descr-parentBean"/>
    <bean id="cluSetInfo.descr-parentBean" abstract="true" parent="AttributeDefinition">
        <property name="name" value="descr"/>
        <property name="dataType" value="STRING" />
        <property name="label" value="Description"/>
        <property name="shortLabel" value="Clu"/>
        <property name="forceUppercase" value="false"/>
        <property name="maxLength" value="80"/>
        <property name="validCharactersConstraint">
            <bean parent="AnyCharacterPatternConstraint"  p:allowWhitespace="true"/>
        </property>
        <property name="controlField">
            <bean parent="Uif-TextControl" p:size="35"/>
        </property>
    </bean>

    <bean id="KS-CluSetInfo-LookupView" parent="KS-Uif-LookupView" p:breadcrumbs.render="false">

        <property name="viewName" value="krmsCourseSetsInfoView" />
        <property name="headerText" value="Advanced Search: Course Sets" />
        <property name="dataObjectClassName" value="org.kuali.student.r2.lum.clu.dto.CluSetInfo" />
        <property name="viewHelperServiceClass" value="org.kuali.student.lum.lu.ui.krms.service.impl.CourseSetsLookupableImpl" />
        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="name"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="descr"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="Uif-DataField" p:propertyName="name"/>
            </list>
        </property>

    </bean>

</beans>
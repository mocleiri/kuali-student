            <!--<groupId>org.lesscss</groupId>-->
            <!--<artifactId>lesscss-maven-plugin</artifactId>-->
            <!--<version>${lesscss.version}</version>-->
            <!--<configuration>-->
            <!--<sourceDirectory>${project.basedir}/src/main/webapp/themes/ksapboot/stylesheets</sourceDirectory>-->
            <!--<outputDirectory>${project.build.directory}/${project.artifactId}-webapp/ks-ap/themes/ksapboot/stylesheets</outputDirectory>-->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-Course-FindACourse" parent="KS-Uif-LookupView">
        <property name="viewName" value="CoursesOnlyLookup"/>
        <property name="headerText" value="Find a Course" />
        <property name="dataObjectClassName" value="org.kuali.student.lum.lu.ui.krms.dto.CluInformation" />
        <property name="viewHelperServiceClass" value="org.kuali.student.lum.lu.ui.krms.service.impl.CourseInfoLookupableImpl" />
        <property name="cssClasses">
            <list>
                <value>ks-cm-find-course</value>
            </list>
        </property>

        <property name="applicationHeader">
            <bean parent="KS-Uif-FormView-ApplicationHeader"/>
        </property>

        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-CurriculumManagement"/>
            </list>
        </property>

        <property name="page">
            <bean parent="Uif-LookupPage">
                <property name="header">
                    <null/>
                </property>
                <property name="instructionalMessage">
                    <bean parent="Uif-Message" p:width="auto">
                        <property name="messageText"
                                  value=" Enter search terms in one or more fields" />
                    </bean>
                </property>
            </bean>
        </property>

        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="code" p:label="Course Code" p:fieldLabel.renderColon="true"/>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="title" p:label="Course Title" p:fieldLabel.renderColon="true" />
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="description" p:label="Phrase in Description" p:fieldLabel.renderColon="true"/>
            </list>
        </property>
        <property name="resultFields">
            <list>
                <bean parent="KS-Uif-DataField-Simple" p:propertyName="code" p:label="Course Code"/>
                <bean parent="KS-Uif-DataField-Simple" p:propertyName="title" p:label="Course Title"/>
                <bean parent="KS-Uif-DataField-Simple" p:propertyName="state" p:label="State"/>
                <bean parent="KS-Uif-DataField-Simple" p:propertyName="description" p:label="Description"/>
            </list>
        </property>

        <property name="criteriaGroup.footer.items">
            <list>
                <bean parent="Uif-SecondaryActionButton" p:methodToCall="search" p:actionLabel="Find Courses" />
            </list>
        </property>

        <property name="footer.items">
            <list />
        </property>
    </bean>
</beans>

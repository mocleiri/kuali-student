<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CourseView-LearningObjectives-Section" parent="KS-CourseView-VerticalBoxSection">
            <property name="headerText" value="Learning Objectives"/>
            <property name="items">
                <list>
                    <ref bean="LearningObjective-NoRequiredMessageLink" />
                    <ref bean="LearningObjective-CollectionSection" />
                </list>
            </property>
    </bean>

    <bean id="LearningObjective-NoRequiredMessageLink" parent="Uif-HorizontalFieldGroup" >
        <property name="style" value="display: none;" />
        <property name="cssClasses">
            <list merge="true">
                <value>hide-when-show-all-fields</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:id="LearningObjective-NoRequiredMessage"
                      p:messageText="No required fields." p:style="margin-top: 5px; margin-right: 0px;">
                </bean>
                <bean parent="KS-Uif-ActionLink" p:id="LearningObjective-NoRequiredMessage-expand-link"
                      p:actionScript="createCourseShowHideObjectiveElements('LearningObjective-NoRequiredMessageLink', 'LearningObjective-CollectionSection');"
                      p:actionLabel="Show all fields" p:style="margin-right: 15pt; margin-top: 0px;">
                </bean>
            </list>
        </property>
    </bean>

    <bean id="LearningObjective-CollectionSection" parent="Uif-StackedCollectionSection"
		p:propertyName="loDisplayWrapperModel.loWrappers" p:collectionObjectClass="org.kuali.student.cm.course.form.LoDisplayInfoWrapper">
        <property name="cssClasses">
            <list merge="true">
                <value>admin-not-required-field</value>
            </list>
        </property>
        <property name="onDocumentReadyScript" value="setupCharCounters(); applyIndentationStyling();" />
        <property name="layoutManager">
			<bean parent="Uif-StackedCollectionLayout-WithBoxItems">
				<property name="subCollectionFieldGroupPrototype">
					<bean parent="Uif-HorizontalFieldGroup" />
				</property>
			</bean>
		</property>
		<property name="layoutManager.lineGroupPrototype.header.headerText" value="Learning Objective @{(#index + 1)}" />
		<property name="layoutManager.lineGroupPrototype.header.lowerGroup">
			<ref bean="LearningObjectives-ToolBarSection" />
		</property>
		<property name="renderAddBlankLineButton" value="true" />
        <property name="addBlankLineAction">
            <bean parent="Uif-AddBlankLineAction">
                <property name="methodToCall" value="addBlankLine"/>
                <property name="actionEvent" value="addBlankLine"/>
                <property name="id" value="uif-addBlankLine-outcome"/>
                <property name="actionLabel" value="Add Learning Objective"/>
                <property name="actionImagePlacement" value="LEFT"/>
                <property name="actionImage">
                    <bean parent="Uif-Image" p:source="@{#ConfigProperties['ks.externalizable.images.url']+'/plus_grey.png'}"/>
                </property>
                <property name="style" value="margin-top:5px;"/>
            </bean>
        </property>
		<property name="addLinePlacement" value="BOTTOM" />

        <property name="items">
			<list>
				<bean id="KS-LoDisplayInfoWrapper-descr" parent="KS-Uif-InputField"
					p:propertyName="loInfo.descr.plain" p:showLabel="false">
					<property name="control">
						<bean parent="Uif-TextAreaControl" p:cols="60" >
                            <property name="cssClasses">
                                <list merge="true">
                                    <value>cm-charcount-max-500</value>
                                </list>
                            </property>
                        </bean>
                    </property>
                    <property name="quickfinder">
                        <bean parent="Uif-QuickFinder" p:lightBox.lookupReturnByScript="true">
                            <property name="dataObjectClassName" value="org.kuali.student.cm.course.form.LoDisplayInfoWrapper"/>
                            <property name="quickfinderAction">
                                <bean parent="Uif-ActionLink" p:actionLabel="Search for Learning Objectives" p:methodToCall="performLookup"/>
                            </property>
                            <property name="fieldConversions">
                                <map>
                                    <entry key="descr.plain" value="loInfo.descr.plain"/>
                                </map>
                            </property>
                            <property name="lookupParameters">
                                <map>
                                    <entry key="descr.plain" value="loInfo.descr.plain"/>
                                </map>
                            </property>
                        </bean>
					</property>
				</bean>
                <bean id="KS-LoDisplayInfoWrapper-selected" parent="KS-Uif-InputField" p:propertyName="selected" >
                    <property name="control">
                        <bean parent="KS-Uif-HiddenControl" />
                    </property>
                </bean>
                <bean id="KS-LoDisplayInfoWrapper-indentLevel" parent="KS-Uif-InputField" p:propertyName="indentLevel" >
                    <property name="control">
                        <bean parent="KS-Uif-HiddenControl" />
                    </property>
                </bean>
			</list>
		</property>
		<property name="subCollections">
			<list>
				<bean parent="Uif-StackedCollectionSubSection"
					p:collectionObjectClass="org.kuali.student.r2.lum.lo.dto.LoCategoryInfo"
					p:propertyName="loCategoryInfoList">
					<property name="layoutManager">
						<bean parent="Uif-StackedCollectionLayout-WithBoxItems">
							<property name="subCollectionFieldGroupPrototype">
								<bean parent="Uif-HorizontalFieldGroup" />
							</property>
						</bean>
					</property>
					<property name="layoutManager.lineGroupPrototype.header.headerText"
						value="Category @{(#index + 1)}" />
					<property name="addLineLabel.render" value="false" />
					<property name="items">
						<list>
                            <bean parent="Uif-HorizontalFieldGroup">
                                <property name="items">
                                    <list>
                                        <bean parent="KS-Uif-InputField-LabelTop" p:label="Category"
                                            p:propertyName="name">
                                            <property name="control">
                                                <bean parent="KS-Uif-TextControl" />
                                            </property>
                                            <property name="suggest">
                                                <bean parent="Uif-Suggest">
                                                    <property name="valuePropertyName" value="catNameAndType" />
                                                    <property name="templateOptions" value="minLength:1,delay:0" />
                                                    <property name="suggestQuery">
                                                        <bean parent="Uif-AttributeQueryConfig"
                                                            p:queryMethodToCall="searchForLoCategories" />
                                                    </property>
                                                </bean>
                                            </property>
                                            <property name="quickfinder">
                                                <bean parent="Uif-QuickFinder">
                                                    <property name="autoSearch" value="true" />
                                                    <property name="quickfinderAction">
                                                        <bean parent="Uif-ActionLink">
                                                            <property name="methodToCall" value="performLookup" />
                                                            <property name="actionLabel" value="Browse for categories" />
                                                            <property name="cssClasses">
                                                                <list merge="true">
                                                                    <value>uif-actionLink-block</value>
                                                                </list>
                                                            </property>
                                                        </bean>
                                                    </property>
                                                    <property name="lightBox">
                                                        <bean parent="Uif-LightBox" p:lookupReturnByScript="false" />
                                                    </property>
                                                    <property name="dataObjectClassName"
                                                        value="org.kuali.student.cm.course.form.LoCategoryInfoWrapper" />
                                                    <property name="fieldConversions">
                                                        <map>
                                                            <entry key="catNameAndType" value="name" />
                                                        </map>
                                                    </property>
                                                </bean>
                                            </property>
                                            <!--<property name="help">
                                                <bean parent="Uif-KS-Help"
                                                    p:tooltipHelpContent="Add a category to classify your learning
                                                objectives. The categories will be used for administrative analysis." />
                                            </property>-->
                                        </bean>
                                        <bean parent="Uif-ImageField" p:source="@{#ConfigProperties['ks.externalizable.images.url']}/validation/info.png">
                                            <property name="toolTip">
                                                <bean parent="Uif-KS-Tooltip" p:tooltipContent="Add a category to classify your learning
                                                                                                objectives. The categories will be used for administrative analysis."/>
                                            </property>
                                        </bean>
                                    </list>
							    </property>
                            </bean>
						</list>
					</property>
                </bean>
			</list>
		</property>
	</bean>

    <bean id="LearningObjectives-MoveUp-Button" parent="Uif-ActionImage">
		<property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['cm.krad.externalizable.images.url']+'/ArrowUp.png'}" p:altText="Move Up"/>
        </property>
        <property name="actionScript" value="moveLo(this, 'LearningObjective-CollectionSection', 'moveLearningObjectiveUp');" />
        <property name="toolTip">
        	<bean parent="Uif-Tooltip" p:tooltipContent="Move learning objective up" />
        </property>
    </bean>

    <bean id="LearningObjectives-MoveDown-Button" parent="Uif-ActionImage">
    	<property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['cm.krad.externalizable.images.url']+'/ArrowDown.png'}" p:altText="Move Down"/>
        </property>
        <property name="actionScript" value="moveLo(this, 'LearningObjective-CollectionSection', 'moveLearningObjectiveDown');" />
        <property name="toolTip">
        	<bean parent="Uif-Tooltip" p:tooltipContent="Move learning objective down" />
        </property>
    </bean>

    <bean id="LearningObjectives-IncreaseIndent-Button" parent="Uif-ActionImage">
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['cm.krad.externalizable.images.url']+'/IncreaseIndent.png'}" p:altText="Increase Indent"/>
        </property>
        <property name="actionScript" value="moveLo(this, 'LearningObjective-CollectionSection', 'moveLearningObjectiveRight');" />
        <property name="toolTip">
        	<bean parent="Uif-Tooltip" p:tooltipContent="Indent learning objective" />
        </property>
        <property name="successCallback" value="alert('successCallback')" />
    </bean>

    <bean id="LearningObjectives-DecreaseIndent-Button" parent="Uif-ActionImage">
        <property name="actionImage">
            <bean parent="Uif-Image" p:source="@{#ConfigProperties['cm.krad.externalizable.images.url']+'/DecreaseIndent.png'}" p:altText="Decrease Indent"/>
        </property>
        <property name="actionScript" value="moveLo(this, 'LearningObjective-CollectionSection', 'moveLearningObjectiveLeft');" />
        <property name="toolTip">
        	<bean parent="Uif-Tooltip" p:tooltipContent="Outdent learning objective" />
        </property>
    </bean>

	<bean id="LearningObjectives-ToolBarSection" parent="Uif-HorizontalBoxSection">
		<property name="items">
			<list>
				<ref bean="LearningObjectives-MoveUp-Button" />
				<ref bean="LearningObjectives-MoveDown-Button" />
				<ref bean="LearningObjectives-IncreaseIndent-Button" />
				<ref bean="LearningObjectives-DecreaseIndent-Button" />
			</list>
		</property>
	</bean>
</beans>
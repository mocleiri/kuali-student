<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KS-DocumentPageFooter-SubmitCancel"  parent="KS-DocumentPageFooter-SubmitCancel-parent"/>
    <bean id="KS-DocumentPageFooter-SubmitCancel-parent" parent="Uif-DocumentPageFooter" abstract="true">
        <property name="items">
            <list>
                <bean parent="KS-Uif-PrimaryActionButton" p:ajaxSubmit="false" p:methodToCall="route" p:actionLabel="Submit" p:performClientSideValidation="true"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"/>
                <bean parent="Uif-NavigationActionLink" p:ajaxSubmit="false" p:methodToCall="cancel" p:actionLabel="Cancel"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_CANCEL]}"/>
            </list>
        </property>
    </bean>

    <bean id="KS-AgendaManage-RulePrototype" parent="KRMS-AgendaManage-RulePrototype">
        <property name="items">
            <list>
                <ref bean="KS-AgendaManage-EditRule"/>
                <ref bean="KS-AgendaManage-AddRule"/>
            </list>
        </property>
    </bean>

    <bean id="KS-AgendaManage-EditRule" parent="KRMS-AgendaManage-EditRule">
    <property name="items">
        <list>
            <bean id="KS-RuleEdit-ActionLinks" parent="KS-RuleEdit-Links" p:align="right"/>
            <bean parent="Uif-MessageField" p:messageText="@{#line.ruleTypeInfo.instruction}"/>
            <bean id="KS-ViewTree-Group" parent="Uif-VerticalBoxGroup"
                  p:cssClasses="viewModeNode">
                <property name="items">
                    <list>
                        <ref bean="KS-ViewTree-Section"/>
                    </list>
                </property>
            </bean>
        </list>
    </property>
    </bean>

    <bean id="KS-AgendaManage-AddRule" parent="KRMS-AgendaManage-AddRule">
        <property name="items">
            <list>
                <bean id="KS-RuleAdd-ActionLink" parent="KS-RuleAdd-Links"  p:align="right"/>
                <bean parent="Uif-MessageField" p:messageText="@{#line.ruleTypeInfo.instruction}"/>
            </list>
        </property>
    </bean>

    <bean id="KS-RuleAdd-Links" parent="KRMS-RuleAdd-Links">
        <property name="items">
            <list>
                <bean parent="Uif-NavigationActionLink" p:actionLabel="Add Rule" p:methodToCall="addRule"
                      p:render="@{#actionFlags[#Constants.KUALI_ACTION_CAN_ROUTE]}"/>
            </list>
        </property>
    </bean>

    <bean id="KS-RuleEdit-Links" parent="KRMS-RuleEdit-Links">
        <property name="items">
            <list>
                <bean parent="Uif-NavigationActionLink" p:actionLabel="Edit Rule" p:methodToCall="goToRuleView"/>
                <bean parent="KS-Uif-ActionLink" p:actionLabel="Delete Rule" p:methodToCall="deleteRule"/>
            </list>
        </property>
    </bean>

    <bean id="KS-ViewTree-Section" parent="KRMS-ViewTree-Section">
        <property name="propertyName" value="viewTree"/>
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <ref bean="KS-ListItems-DataGroup"/>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KRMS-ListItems-DataGroup-parent" parent="Uif-StackedCollectionGroup"
          p:style="width: 600px; padding: 0; margin-bottom: 0px;">
        <property name="layoutManager">
            <bean parent="Uif-StackedCollectionLayout-WithBoxItems" p:additionalCssClasses="krms-stackedCollectionLayout">
                <property name="lineGroupPrototype">
                    <bean parent="Uif-CollectionHorizontalBoxItem" p:additionalCssClasses="krms-stackedPreviewItem">
                        <property name="renderFooter" value="false"/>
                    </bean>
                </property>
            </bean>
        </property>
        <property name="lineActions">
            <list></list>
        </property>
        <property name="renderAddLine" value="false"/>
        <property name="propertyName" value="listItems"/>
        <property name="collectionObjectClass" value="java.lang.String"/>
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="@{#line}"
                      p:style="width: 290px; margin: 0px;"/>
            </list>
        </property>
    </bean>
    <bean id="KRMS-ListItems-DataGroup" parent="KRMS-ListItems-DataGroup-parent"/>

    <bean id="KS-ListItems-DataGroup-parent" parent="KRMS-ListItems-DataGroup-parent" p:renderAddLine="false">
        <property name="layoutManager">
            <bean parent="Uif-StackedCollectionLayout-WithBoxItems" class="org.kuali.student.core.krms.HorizontalActionsStackedLayoutManager"
                  p:additionalCssClasses="krms-stackedCollectionLayout">
                <property name="actionsInLineGroup" value="true"/>
                <property name="lineGroupPrototype">
                    <bean parent="Uif-CollectionHorizontalBoxItem" p:additionalCssClasses="krms-stackedPreviewItem">
                        <property name="renderFooter" value="true"/>
                    </bean>
                </property>
                <property name="subCollectionFieldGroupPrototype">
                    <bean parent="Uif-VerticalFieldGroup" p:fieldLabel.render="false"
                          p:cssClasses="uif-subCollection"/>
                </property>
            </bean>
        </property>
        <property name="collectionObjectClass" value="org.kuali.student.lum.lu.ui.krms.dto.CluGroup" />
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="@{#line.title}" p:render="@{#line.showTitle}"/>
            </list>
        </property>
        <property name="lineActions">
            <list>
                <bean parent="KS-Uif-ActionLink" p:actionScript="show(e);" p:render="@{#line.showTitle}"
                      p:actionLabel="Show Courses" p:additionalCssClasses="showActionLink">
                    <property name="actionImage">
                        <null/>
                    </property>
                </bean>
                <bean parent="KS-Uif-ActionLink" p:actionScript="hide(e);" p:render="@{#line.showTitle}"
                      p:actionLabel="Hide Courses" p:additionalCssClasses="hideActionLink">
                    <property name="actionImage">
                        <null/>
                    </property>
                </bean>
            </list>
        </property>
        <property name="subCollections">
            <list>
                <bean parent="KS-ListItems-SubGroup" p:render="@{!#line.showTitle}"/>
                <bean parent="KS-ListItems-SubGroup" p:render="@{#line.showTitle}" p:additionalCssClasses="subGroup">
                </bean>
            </list>
        </property>
    </bean>
    <bean id="KS-ListItems-DataGroup" parent="KS-ListItems-DataGroup-parent">
        <property name="subCollections">
            <list merge="true">
                <bean parent="KS-ListItems-DataGroup-parent">
                    <property name="propertyName" value="cluGroups"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-SimpleTableCollectionLayout" parent="Uif-TableCollectionLayout" class="org.kuali.student.core.krms.SimpleTableLayoutManager">
        <property name="cssClasses">
            <list>
                <value>uif-simpleTableCollectionLayout</value>
            </list>
        </property>
        <property name="applyAlternatingRowStyles" value="false"/>
        <property name="renderAlternatingHeaderColumns" value="false"/>
        <property name="generateAutoSequence" value ="true"/>
        <property name="richTable">
            <bean parent="KS-Uif-PagedRichTable">
                <property name="render" value="false"/>
            </bean>
        </property>
        <property name="renderSequenceField" value="false" />
    </bean>

    <bean id="KS-ListItems-SubGroup" parent="Uif-TableCollectionGroup" p:style="width: 550px; padding: 0;" p:renderAddLine="false">
        <property name="collectionObjectClass" value="org.kuali.student.lum.lu.ui.krms.dto.CluCore" />
        <property name="propertyName" value="clus" />
        <property name="collectionLookup">
            <bean parent="Uif-CollectionQuickFinder" p:quickfinderAction.render="false" />
        </property>
        <property name="layoutManager">
            <ref bean="KS-SimpleTableCollectionLayout"/>
        </property>
        <property name="renderLineActions" value="false"/>
        <property name="lineActions">
            <list></list>
        </property>
        <property name="items">
            <list>
                <bean parent="KS-Uif-DataField" p:propertyName="code"/>
                <bean parent="KS-Uif-DataField" p:propertyName="shortName"/>
                <bean parent="KS-Uif-DataField" p:propertyName="credits"/>
            </list>
        </property>
    </bean>

    <bean name="KS-RuleMaintenance-Page-Parent" parent="KRMS-RuleMaintenance-Page-Parent">
        <property name="headerText" value="@{#dp.courseRuleManagementWrapper.ruleEditor.dummy == true ? 'Add' : 'Edit'} @{#dp.courseRuleManagementWrapper.ruleEditor.ruleTypeInfo.description}"/>
        <property name="items">
            <list>
                <ref bean="KS-Rules-ManageSection"/>
            </list>
        </property>
        <property name="footer">
            <bean parent="KS-Uif-FooterBase">
                <property name="items">
                    <list>
                        <bean id="KS-UpdateRule-Button" parent="KS-Uif-PrimaryActionButton"
                              p:performClientSideValidation="true" p:ajaxSubmit="false">
                            <property name="actionLabel" value="Update Rule"/>
                            <property name="methodToCall" value="updateRule"/>
                        </bean>
                        <bean id="KS-CancelRule-Button" parent="Uif-CancelAction">
                            <property name="methodToCall" value="cancelEditRule"/>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KS-Rules-ManageSection" parent="KRMS-Rules-ManageSection">
        <property name="items">
            <list>
                <ref bean="KS-RuleHeader-BoxSection"/>
                <ref bean="KS-RuleEdit-TabSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-RuleHeader-BoxSection" parent="KRMS-RuleHeader-BoxSection">
        <property name="items">
            <list>
                <bean parent="KRMS-RuleHeader-Section">
                    <property name="instructionalText" value="@{#dp.courseRuleManagementWrapper.ruleEditor.ruleTypeInfo.instruction}"/>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-RuleEdit-TabSection" parent="KRMS-RuleEdit-TabSection">
        <property name="items">
            <list>
                <ref bean="KS-EditWithObject-EditSection"/>
                <ref bean="KS-EditWithLogic-EditSection"/>
            </list>
        </property>
        <property name="tabsWidget">
            <ref bean="KS-TabsWidget"/>
        </property>
    </bean>

    <bean id="KS-TabsWidget" parent="KRMS-TabsWidget">
        <property name="templateOptions">
            <map>
                <entry key="selected" value="0"/>
                <entry key="select"
                       value="function(event, ui) {ajaxCallOnTabSelect(event, ui, 'KS-RuleEditor-TreeGroup', 'KS-EditWithLogic-EditGroup', 'refreshLogicArea', 'KRMS-LogicArea-InputField');}"/>
            </map>
        </property>
    </bean>

    <bean id="KS-EditWithObject-EditSection" parent="KRMS-EditWithObject-EditSection-parent">
        <property name="items">
            <list>
                <bean parent="KS-EditWithObject-EditGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KS-EditWithObject-EditGroup" parent="KRMS-EditWithObject-EditGroup">
        <property name="headerText" value="Proposition Tree"/>
        <property name="items">
            <list>
                <ref bean="KS-EditRule-ToolbarSection"/>
                <ref bean="KRMS-RuleEditor-TreeExpandCollapse"/>
                <ref bean="KS-RuleEditor-TreeGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KS-EditRule-ToolbarSection" parent="KS-Uif-HorizontalBoxSection-ToolbarSection">
        <property name="items">
            <list>

                <bean parent="KS-Uif-HorizontalBoxGroup-ToolbarGroup">
                    <property name="items">
                        <list>
                            <bean parent="KRMS-RuleEditorView-AddButton"/>
                            <bean parent="KRMS-RuleEditorView-EditButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-Uif-HorizontalBoxGroup-ToolbarGroup">
                    <property name="items">
                        <list>
                            <bean parent="KRMS-RuleEditorView-GroupButton"/>
                            <bean parent="KRMS-RuleEditorView-LeftButton"/>
                            <bean parent="KRMS-RuleEditorView-RightButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-Uif-HorizontalBoxGroup-ToolbarGroup">
                    <property name="items">
                        <list>
                            <bean parent="KRMS-RuleEditorView-UpButton"/>
                            <bean parent="KRMS-RuleEditorView-DownButton"/>
                        </list>
                    </property>
                </bean>

                <bean parent="KS-Uif-HorizontalBoxGroup-ToolbarGroup">
                    <property name="items">
                        <list>
                            <bean parent="KRMS-RuleEditorView-CopyButton"/>
                            <bean parent="KRMS-RuleEditorView-CutButton"/>
                            <bean parent="KRMS-RuleEditorView-PasteButton"/>
                            <bean parent="KRMS-RuleEditorView-DeleteButton"/>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="KS-EditWithLogic-EditSection" parent="KRMS-EditWithLogic-EditSection-parent">
        <property name="items">
            <list>
                <ref bean="KS-EditWithLogic-EditGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KS-EditWithLogic-EditGroup" parent="KRMS-EditWithLogic-EditGroup">
        <property name="items">
            <list>
                <ref bean="KS-EditWithLogic-TreeGroup"/>
            </list>
        </property>
    </bean>

    <bean id="KS-EditWithLogic-TreeGroup" parent="KRMS-EditWithLogic-TreeGroup" p:editAuthz="true">
        <property name="items">
            <list>
                <ref bean="KRMS-LogicArea-InputField"/>
                <ref bean="KRMS-LogicPreview-Button"/>
                <ref bean="KS-LogicPreview-Tree"/>
            </list>
        </property>
    </bean>

    <bean id="KS-LogicPreview-Tree" parent="KRMS-LogicPreview-Tree">
        <property name="items">
            <list>
                <ref bean="KS-PreviewTree-Section"/>
            </list>
        </property>
    </bean>

    <bean id="KS-PreviewTree-Section" parent="KRMS-PreviewTree-Section">
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <ref bean="KS-PreviewPrototype-BoxGroup"/>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KS-PreviewPrototype-BoxGroup" parent="KRMS-PreviewPrototype-BoxGroup">
        <property name="items">
            <list>
                <ref bean="KRMS-PrototypeHeader-BoxGroup"/>
                <ref bean="KS-ListItems-DataGroup"/>
            </list>
        </property>
    </bean>

    <!-- Note: this bean id is important, it is used for component matching in an ajax refresh -->
    <!-- also, the bogus refreshWhenChanged is important because it puts a RuleEditorView-TreeGroup_refreshWrapper around the group that
        is needed for the javascript hack that is refreshing -->
    <bean id="KS-RuleEditor-TreeGroup" parent="KRMS-RuleEditor-TreeGroup">
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:messageText="Click on rule statement to move or modify"
                      p:style="font-weight:bold;margin-left: 2em;"/>
                <bean parent="KS-RulerEditor-TreeSection"/>
                <bean id="proposition_selected" parent="KRMS-Rules-HiddenField"
                      p:propertyName="selectedKey"/>
                <bean id="proposition_copy" parent="KRMS-Rules-HiddenField" p:propertyName="copyKey"/>
                <bean id="proposition_cut" parent="KRMS-Rules-HiddenField" p:propertyName="cutKey"/>
            </list>
        </property>
    </bean>

    <bean id="KS-RulerEditor-TreeSection" parent="KRMS-RulerEditor-TreeSection-parent">
        <property name="nodePrototypeMap">
            <map key-type="java.lang.Class">
                <entry key="#{ T(org.kuali.rice.krms.tree.node.RuleEditorTreeNode) }">
                    <bean parent="KRMS-RuleTreeNodePrototype"/>
                </entry>
                <entry key="#{ T(org.kuali.rice.krms.tree.node.SimplePropositionNode) }">
                    <bean parent="KRMS-SimplePropositionNodePrototype"/>
                </entry>
                <entry key="#{ T(org.kuali.rice.krms.tree.node.SimplePropositionEditNode) }">
                    <bean parent="KS-SimplePropositionEditNodePrototype"/>
                </entry>
                <entry key="#{ T(org.kuali.rice.krms.tree.node.CompoundOpCodeNode) }">
                    <bean parent="KRMS-CompoundOpCodeNodePrototype"/>
                </entry>
            </map>
        </property>
    </bean>

    <bean id="KS-SimplePropositionEditNodePrototype" parent="KRMS-SimplePropositionEditNodePrototype">
        <property name="dataGroupPrototype">
            <bean id="KS-PropositionEdit-BoxSection" parent="KS-PropositionBo-MaintenanceView-Custom" p:cssClasses="editModeNode">
                <property name="layoutManager.orientation" value="VERTICAL"/>
            </bean>
        </property>
    </bean>

    <bean id="KS-PropositionBo-MaintenanceView-Custom" parent="PropositionBo-MaintenanceView-Custom-parentBean">
        <property name="items">
            <list>
                <ref bean="KS-PropositionEdit-DefineSection"/>
                <ref bean="KRMS-PropositionEdit-DetailSection"/>
            </list>
        </property>
        <property name="footer">
            <!--Add button to update the preview-->
            <bean parent="Uif-HorizontalBoxGroup">
                <property name="items">
                    <list>
                        <bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="true">
                            <property name="actionLabel" value="Preview Change"/>
                            <property name="actionScript" value="updateProposition('updateProposition', 'KS-RuleEditor-TreeGroup');"/>
                        </bean>
                        <bean parent="Uif-ActionLink" p:style="margin-left: 0.5em;margin-top: 0.3em;color: #3F7826;">
                            <property name="actionLabel" value="Cancel"/>
                            <property name="actionScript" value="updateProposition('cancelEditProposition', 'KS-RuleEditor-TreeGroup');"/>
                        </bean>
                    </list>
                </property>
            </bean>
        </property>
    </bean>
    
    <bean id="KS-PropositionEdit-DefineSection" parent="KRMS-PropositionEdit-DefineSection-parentBean">
        <property name="items">
            <list>

                <!-- Hidden ID field -->
                <bean parent="KRMS-PropKey-HiddenField"/>

                <!--Add the type droplist-->
                <bean id="KRMS-PropositionType-Dropdown" parent="KS-Uif-InputField-LabelTop" p:propertyName="proposition.typeId"
                      p:showLabel="true" p:label="Rule Statement Option" p:maxLength="40" p:required="true">
                    <property name="control">
                        <bean parent="KS-Uif-DropdownControl" p:cssClasses="categorySelect"
                              p:onChangeScript="ajaxCallPropositionTypeUpdate(jQuery(this), 'updatePropositionType');" />
                    </property>
                    <property name="optionsFinder">
                        <bean class="org.kuali.student.lum.lu.ui.course.keyvalues.KSCoursePropositionTypeValuesFinder"/>
                    </property>
                </bean>

            </list>
        </property>
    </bean>
    


</beans>

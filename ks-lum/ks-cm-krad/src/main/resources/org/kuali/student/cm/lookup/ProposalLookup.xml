<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="KS-CM-ProposalLookup" parent="KS-Uif-LookupView">
        <property name="id" value="ksCMProposalLookup"/>
        <property name="viewName" value="ProposalLookup"/>
        <property name="headerText" value="Find a Proposal" />
        <property name="dataObjectClassName" value="org.kuali.student.r2.core.proposal.dto.ProposalInfo" />
        <property name="viewHelperServiceClass" value="org.kuali.student.cm.course.service.ProposalLookupableImpl" />
        <property name="authorizerClass" value="org.kuali.student.cm.course.auth.ProposalLookupViewAuthorizerBase"/>
        <property name="renderMaintenanceLinks" value="true"/>

        <property name="applicationHeader">
            <bean parent="KS-Uif-FormView-ApplicationHeader"/>
        </property>

        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-CurriculumManagement"/>
            </list>
        </property>

        <property name="cssClasses">
            <list>
                <value>ks-cm-find-course-proposal</value>
            </list>
        </property>

        <property name="page.header">
            <null/>
        </property>

        <property name="page.instructionalMessage">
            <bean parent="Uif-Message" p:width="auto">
                <property name="messageText" value="Search for keywords found within the title of a proposal." />
            </bean>
        </property>

        <property name="criteriaFields">
            <list>
                <bean parent="Uif-LookupCriteriaInputField" p:propertyName="title" p:label="Title" p:fieldLabel.renderColon="true"/>
            </list>
        </property>

        <property name="criteriaGroup">
            <bean parent="Uif-HorizontalBoxSection">
                <property name="fieldBindingObjectPath" value="lookupCriteria"/>
                <property name="footer">
                  <bean parent="Uif-LookupCriteriaFooter"/>
                </property>
                <property name="items">
                    <list>
                        <bean parent="Uif-LookupCriteriaInputField" p:propertyName="title" p:label="Title" p:required="true"/>
                        <bean parent="Uif-SecondaryActionButton" p:methodToCall="search" p:actionLabel="Find Course Proposal" p:performClientSideValidation="true">
                        </bean>
                    </list>
                </property>
            </bean>
        </property>

        <property name="resultFields">
            <list>
                <bean parent="KS-Uif-DataField-Simple" p:propertyName="name" p:label="Title" p:id="@{#lp.name}"/>
                <bean parent="KS-Uif-DataField-Simple" p:propertyName="meta.createId" p:label="Author"/>
            </list>
        </property>

        <property name="resultsGroup.renderLineActions" value="true"/>
        <property name="resultsGroup.layoutManager.actionColumnPlacement" value="RIGHT"/>

        <property name="resultsGroup.layoutManager.richTable">
            <bean parent="KS-Uif-RichTable"/>
        </property>

        <property name="resultsGroup.layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="aoColumnDefs"
                   value="[ {'aTargets':[0,1], 'bSortable':true}
                        ]"/>
            </map>
        </property>

        <property name="resultsGroup.lineActions">
            <list>
              <bean parent="KS-Uif-View-NavigationActionLink">
                <property name="id" value="@{#lp.name}_view"/>
                <property name="actionLabel" value="Review Proposal"/>
                <property name="finalizeMethodToCall" value="getProposalActionLink"/>
                <property name="finalizeMethodAdditionalArguments">
                  <list>
                    <value>docHandler</value>
                    <value>KS-CourseView-ReviewProposalPage</value>
                  </list>
                </property>
                <property name="actionParameters">
                    <map>
                      <entry key="pageId" value="KS-CourseView-ReviewProposalPage"/>
                    </map>
                </property>
                <property name="render" value="@{#ViewHelper.allowsProposalOpenAction(#line)}"/>
              </bean>
              <bean parent="KS-Uif-Edit-NavigationActionLink">
                <property name="id" value="@{#lp.name}_edit"/>
                <property name="actionLabel" value="Edit"/>
                <property name="finalizeMethodToCall" value="getProposalActionLink"/>
                <property name="finalizeMethodAdditionalArguments">
                  <list>
                    <value>docHandler</value>
                    <value>KS-CourseView-CoursePage</value>
                  </list>
                </property>
                <property name="render" value="@{#ViewHelper.allowsProposalEditAction(#line) and view.renderMaintenanceLinks}"/>
              </bean>
            </list>
          </property>

        <property name="footer.items">
            <list>
            </list>
        </property>
    </bean>
</beans>

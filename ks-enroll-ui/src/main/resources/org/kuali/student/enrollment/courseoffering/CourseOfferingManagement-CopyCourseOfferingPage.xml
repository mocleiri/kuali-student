    <bean id="KS-CourseOfferingManagement-CopyCourseOfferingPage" parent="KS-Uif-Page" p:disclosure.render="false"
          p:id="copyCourseOfferingPage"
          p:headerText="Copy Course Offering">

        <!-- Dynamically replace by page-title from parent using JS-onDocumentReadyScript to reflect subject-code.
             ie: from "Course Offerings" to "WMST200"
             This is a work-around, at least until KRAD 2.3-m3 -->
        <property name="onDocumentReadyScript" value="updateViewHeaderText( '@{courseOfferingCopyWrapper.courseOfferingCode}' );" />

        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <util:list id="KS-Enrollment-HomewardPathBreadcrumbs">
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-Enrollment"/>
                <bean  parent="Uif-BreadcrumbItem">
                    <property name="label" value="Course Offerings"/>
                    <property name="url.viewId" value="courseOfferingManagementView"/>
                    <property name="url.controllerMapping" value="courseOfferingManagement"/>
                    <property name="url.requestParameters">
                        <map key-type="java.lang.String" merge="true">
                            <entry key="methodToCall" value="start"/>
                            <entry key="dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                            <entry key="hideReturnLink" value="true"/>
                            <entry key="pageId" value="searchInputPage"/>
                            <entry key="viewName" value="Manage Course Offerings"/>
                        </map>
                    </property>
                </bean>
                <ref bean="KS-HomewardPathBreadcrumbs-Search-Subject"/>
                <ref bean="KS-HomewardPathBreadcrumbs-TheCO-Page"/>
            </util:list>
        </property>

        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-CopyCo-Page"/>
            </list>
        </property>

        <property name="items">
            <list>
                <ref bean="KS-CourseOffering-ContextBar" />
                <ref bean="KS-CourseOfferingManagement-CopyCourseOfferingSection"/>
                <ref bean="KS-CourseOfferingManagement-ActivityOfferingsSection"/>
                <ref bean="KS-CourseOfferingManagement-ConfigureCourseOfferingCopySection"/>
                <ref bean="KS-CourseOfferingManagement-CopyCancelSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-TheCO-Page" parent="Uif-BreadcrumbItem">
        <property name="label" value="@{courseOfferingCopyWrapper.courseOfferingCode}"/>
        <property name="url.viewId" value="courseOfferingManagementView"/>
        <property name="url.controllerMapping" value="courseOfferingManagement"/>
        <property name="url.requestParameters">
            <map key-type="java.lang.String" merge="true">
                <entry key="methodToCall" value="show"/>
                <entry key="dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                <entry key="hideReturnLink" value="true"/>
                <entry key="inputCode" value="@{courseOfferingCopyWrapper.courseOfferingCode}"/>
                <entry key="formKey" value="@{formKey}"/>
                <entry key="pageId" value="manageTheCourseOfferingPage"/>
                <entry key="viewName" value="@{courseOfferingCopyWrapper.courseOfferingCode}"/>
            </map>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-CopyCo-Page" parent="Uif-BreadcrumbItem">
      <property name="label" value="@{(courseOfferingCopyWrapper.courseOfferingCode eq null)? '' : 'Copy '}  @{courseOfferingCopyWrapper.courseOfferingCode}"/>
    </bean>

    <!--
     This is the context bar that will be put into the static context bar placeholder on page load. It does this via the
     "updateContextBar" javascript.
     Note: because of the way the breadcrumbs are implemented we had to set the "display: none"
    -->
    <bean id="KS-CourseOfferingManagement-CopyCourseOfferingPage-ContextBar" parent="Uif-HorizontalBoxGroup" p:style="display: block;"
          p:onDocumentReadyScript="updateContextBar('KS-CourseOfferingManagement-CopyCourseOfferingPage-ContextBar', 'KS-CourseOfferingManagement-ContextBar-PlaceHolder'); setSeasonalColor('KS-CourseOfferingManagement-CopyCourseOfferingPage-ContextBar',@{termDayOfYear}, '@{#ConfigProperties['application.url']}');">
        <property name="cssClasses">
            <list merge="true">
                <value>ks-topGroup</value>
            </list>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-Label" p:labelText="@{termCode}" p:renderColon="false">
                    <property name="cssClasses">
                        <list merge="true">
                            <value>ks-topGroup-termCode</value>
                        </list>
                    </property>
                </bean>
                <bean id="contextBarSocState" parent="KS-Lozenge-Grey-Uif-InputField" p:readOnly="true" p:propertyName="socState" />
            </list>
        </property>
    </bean>


    <bean id="KS-CourseOfferingManagement-CopyCourseOfferingSection" parent="Uif-GridGroup" p:layoutManager.numberOfColumns="2">
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Course Offering Code" p:propertyName="courseOfferingCopyWrapper.courseOfferingCode"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Cross listed as" p:propertyName="courseOfferingCopyWrapper.alternateCOCodesUIList" p:render="@{!courseOfferingCopyWrapper.coInfo.crossListings.empty}"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Course Title" p:propertyName="courseOfferingCopyWrapper.courseTitle"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Term ID" p:propertyName="courseOfferingCopyWrapper.termId"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Credit Count" p:propertyName="courseOfferingCopyWrapper.creditCountUI"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Grading Options" p:propertyName="courseOfferingCopyWrapper.gradingOption"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Student Registration Options" p:propertyName="courseOfferingCopyWrapper.studentRegistrationGradingOptionsUI"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Final Exam Type" p:propertyName="courseOfferingCopyWrapper.finalExamType"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Waitlist Level" p:propertyName="courseOfferingCopyWrapper.waitlistLevelUI"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Waitlist Type" p:propertyName="courseOfferingCopyWrapper.waitlistTypeUI"/>
                <bean parent="Uif-DataField" p:readOnly="true" p:label="Honors Flag" p:propertyName="courseOfferingCopyWrapper.isHonorsUI"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-ActivityOfferingsSection" parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="6"  p:readOnly="true" p:renderAddLine="false">
        <property name="headerText" value="Activity Offerings" />
        <!-- <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />    -->
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" />
        <property name="propertyName" value="activityWrapperList" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="items">
            <list>
                <bean parent="Uif-DataField" p:label="CODE" p:propertyName="aoInfo.activityCode">
                    <property name="inquiry">
                        <bean parent="Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.ActivityOfferingWrapper" p:inquiryParameters="aoInfo.id" />
                    </property>
                </bean>
                <bean parent="Uif-DataField" p:label="STATUS" p:propertyName="stateName" />
                <bean parent="Uif-DataField" p:label="TYPE" p:propertyName="typeName"/>
                <bean parent="Uif-DataField" p:label="FORMAT" p:propertyName="aoInfo.formatOfferingName"/>
                <bean parent="Uif-DataField" p:label="INSTRUCTOR" p:propertyName="firstInstructorDisplayName"/>
                <bean parent="Uif-DataField" p:label="MAX ENR" p:propertyName="aoInfo.maximumEnrollment"/>
            </list>
        </property>
    </bean>

  <bean id="KS-CourseOfferingManagement-ConfigureCourseOfferingCopySection" parent="Uif-VerticalBoxSection" p:disclosure.render="true">
        <property name="header">
            <bean parent="Uif-HeaderFour" p:headerText="Configure Course Offering Copy"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="courseOfferingCopyWrapper.excludeCancelledActivityOfferings" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl">
                            <property name="checkboxLabel" value="Exclude cancelled activity offerings"/>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="courseOfferingCopyWrapper.excludeSchedulingInformation" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl">
                            <property name="checkboxLabel" value="Exclude scheduling information"/>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="courseOfferingCopyWrapper.excludeInstructorInformation" p:fieldLabel.renderColon="false">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl">
                            <property name="checkboxLabel" value="Exclude instructor information"/>
                        </bean>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-CopyCancelSection" parent="Uif-VerticalBoxSection">
        <property name="items">
        <list>
        <bean parent="Uif-HorizontalBoxSection">
            <property name="items">
                <list>
                    <bean parent="Uif-PrimaryActionButton" p:actionLabel="Create Copy" p:methodToCall="copyCourseOfferingCreateCopy"/>
                    <bean parent="Uif-ActionLink" p:methodToCall="copyCourseOfferingCancel" p:actionLabel="Cancel" />
                </list>
            </property>
        </bean>
     </list>
     </property>
  </bean>

</beans>

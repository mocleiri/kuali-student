    <bean id="KS-ScheduleOfClasses-SearchInputPage" parent="KS-Uif-Page" p:disclosure.render="false" p:id="scheduleOfClassesSearchInputPage">
        <property name="header">
            <bean parent="Uif-HeaderThree" p:headerText="Schedule of Classes" />
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <ref bean="KS-ScheduleOfClasses-CriteriaSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="KS-ScheduleOfClasses-CriteriaSection" parent="Uif-HorizontalBoxSection" p:id="scheduleOfClassesCriteriaSection" p:onDocumentReadyScript="toggleShowButton();">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="termCode" p:id="termCode" p:label="Term" p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true" p:onChangeScript="toggleShowButton();">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.scheduleofclasses.keyvalue.ScheduleOfClassesTermKeyValues"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="searchType" p:id="searchType" p:label="Type of Search" p:labelPlacement="TOP" p:fieldLabel.renderColon="false" p:required="true" p:onChangeScript="toggleShowButton();">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="org.kuali.student.enrollment.class2.scheduleofclasses.keyvalue.TypeOfSearchKeyValues"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="course" p:required="true" p:style="margin-top:17px;" p:progressiveRender="@{#dp.searchType eq 'course'}" p:id="course_search_text" p:onKeyUpScript="toggleShowButton();" p:onMouseOutScript="toggleShowButton();">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:ReadOnly="false" p:watermarkText="ENGL or ENGL1 or ENGL101"/>
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                                <property name="quickfinder.fieldConversions">
                                     <map>
                                         <entry key="code" value="course"/>
                                     </map>
                                </property>
                                <property name="quickfinder.readOnlySearchFields" value="courseInfo.courseTitle" />
                                <property name="quickfinder.quickfinderAction">
                                    <bean parent="Uif-ActionLink" p:methodToCall="performLookup" p:id="lookup_searchCourseCode">
                                        <property name="actionImage">
                                            <bean parent="Uif-QuickLookupImage"/>
                                        </property>
                                    </bean>
                                </property>
                                <property name="quickfinder.lightBoxLookup">
                                    <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="departmentName" p:required="true" p:style="margin-top:17px;" p:progressiveRender="@{#dp.searchType eq 'department'}" p:id="department_search_text" p:onKeyUpScript="toggleShowButton();" p:onMouseOutScript="toggleShowButton();">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:ReadOnly="false" p:watermarkText="Type exact dept name or use search"/>
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.core.organization.dto.OrgInfo"/>
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="id" value="department"/>
                                        <entry key="longName" value="departmentName"/>
                                    </map>
                                </property>
                                <property name="quickfinder.quickfinderAction">
                                    <bean parent="Uif-ActionLink" p:methodToCall="performLookup" p:id="lookup_searchDepartment">
                                        <property name="actionImage">
                                            <bean parent="Uif-QuickLookupImage"/>
                                        </property>
                                    </bean>
                                </property>
                                <property name="quickfinder.lightBoxLookup">
                                    <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="instructorName" p:required="true" p:style="margin-top:17px;" p:progressiveRender="@{#dp.searchType eq 'instructor'}" p:id="instructor_search_text" p:onKeyUpScript="toggleShowButton();" p:onMouseOutScript="toggleShowButton();">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:ReadOnly="false" p:watermarkText="Type principal name or use search"/>
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.rice.kim.api.identity.Person"/>
                                <property name="quickfinder.viewName" value="ks_simplePersonLookup" />
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="principalId" value="instructor"/>
                                        <entry key="principalName" value="instructorName" />
                                    </map>
                                </property>
                                <property name="quickfinder.quickfinderAction">
                                    <bean parent="Uif-ActionLink" p:methodToCall="performLookup" p:id="KS-Personnel-LookupView">
                                        <property name="actionImage">
                                            <bean parent="Uif-QuickLookupImage"/>
                                        </property>
                                    </bean>
                                </property>
                                <property name="quickfinder.lightBoxLookup">
                                    <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="titleDesc" p:required="true" p:style="margin-top:17px;" p:progressiveRender="@{#dp.searchType eq 'titleDesc'}" p:id="title_description_search_text" p:onKeyUpScript="toggleShowButton();" p:onMouseOutScript="toggleShowButton();">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="40" p:ReadOnly="false" p:watermarkText="Plants, Diaspora, Sartre"/>
                                </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="false" p:actionLabel="Show" p:methodToCall="show" p:style="margin-top:17px;" p:id="show_button"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="KrmsComponents-ManageView" parent="KS-Uif-FormView">
        <property name="id" value="manageKrmsComponentsView"/>
        <property name="headerText" value="KS KRMS Custom Components"/>
        <property name="formClass" value="org.kuali.student.enrollment.class1.krms.form.KrmsComponentsForm"/>
        <property name="viewHelperServiceClass"
                  value="org.kuali.rice.krms.service.impl.RuleViewHelperServiceImpl"/>
        <property name="singlePageView" value="true"/>
        <property name="page">
            <bean parent="KS-Uif-Page"/>
        </property>
        <property name="header">
            <bean parent="Uif-HeaderTwo"/>
        </property>
        <property name="footer">
            <bean parent="Uif-FooterBase"/>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-ActionLink" p:actionLabel="View" p:methodToCall="viewCourseRange"
                      p:style="margin-right: 15px;"/>
                <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="3"
                      p:renderAddLine="false">
                    <property name="collectionObjectClass" value="org.kuali.rice.krms.impl.ui.TermParameter"/>
                    <property name="propertyName" value="list10"/>
                    <property name="renderLineActions" value="false"/>
                    <property name="collectionLookup.quickfinderAction.render" value="false"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="layoutManager.applyDefaultCellWidths" value="false"/>
                    <property name="layoutManager.applyAlternatingRowStyles" value="false"/>
                    <property name="layoutManager.richTable.templateOptions">
                        <map>
                            <entry key="sDom" value="rtip"/>
                            <entry key="aaSorting" value="[[ 1, 'asc' ]]"/>
                        </map>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:label="Code" p:propertyName="parameter" p:width="65"/>
                        </list>
                    </property>
                </bean>
                <ref bean="KRMS-Clu-Components-Section" />
                <ref bean="KRMS-Org-Components-Section" />
                <bean parent="Uif-InputField-LabelTop" p:propertyName="testDate" p:label="Effective From">
                    <property name="control">
                        <bean parent="Uif-KS-Default-DateControl" />
                    </property>
                </bean>
                <ref bean="KRMS-TestTree-Section"/>
                <bean parent="Uif-ActionLink" p:actionLabel="Progressive Disclosure with dropdown on LightBox" p:actionScript="showLightboxComponent('myDropdownLightBox');"/>
            </list>
        </property>
        <property name="dialogs">
            <list>
                <bean id="myDropdownLightBox" parent="KRMS-DropDownLightBox"/>
                <bean id="tablecollection-dialog" parent="lightbox-witha-tablecollection"/>
            </list>
        </property>
        <property name="additionalScriptFiles">
            <list merge="true">
                <value>ks-enroll/scripts/common.js</value>
            </list>
        </property>
        <property name="additionalCssFiles">
            <list>
                <value>ks-enroll/css/krms.css</value>
            </list>
        </property>
    </bean>

    <bean id="lightbox-witha-tablecollection" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
        <property name="hidden" value="true"/>
        <property name="headerText" value="Course Range"/>
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="3"
                      p:renderAddLine="false">
                    <property name="collectionObjectClass" value="org.kuali.rice.krms.impl.ui.TermParameter"/>
                    <property name="propertyName" value="list10"/>
                    <property name="renderLineActions" value="false"/>
                    <property name="collectionLookup.quickfinderAction.render" value="false"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="layoutManager.applyDefaultCellWidths" value="false"/>
                    <property name="layoutManager.applyAlternatingRowStyles" value="false"/>
                    <property name="layoutManager.richTable.templateOptions">
                        <map>
                            <entry key="sDom" value="rtip"/>
                            <entry key="aaSorting" value="[[ 1, 'asc' ]]"/>
                        </map>
                    </property>
                    <property name="items">
                        <list>
                            <bean parent="Uif-DataField" p:label="Code" p:propertyName="parameter" p:width="65"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-ActionLink" p:actionLabel="Close" p:actionScript="jQuery.fancybox.close();"
                      p:align="right"/>
            </list>
        </property>
    </bean>



    <bean id="KRMS-Clu-Components-Section" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="Clu Components"/>
                <ref bean="KRMS-SingleCourse-SuggestField"/>
                <bean id="update-button" parent="Uif-SecondaryActionButton-Small">
                    <property name="actionLabel" value="Update"/>
                    <property name="actionScript"
                              value="ajaxSubmitForm('updateChanges', null, jQuery(this).data('submitdata'), null, null, null);"/>
                </bean>
                <!--<ref bean="KRMS-MultiCourse-Section"/>-->
                <!--<ref bean="KRMS-Program-Section"/>-->
                <ref bean="KRMS-GPA-Field"/>
                <ref bean="KRMS-TestScore-Field"/>
                <ref bean="KRMS-TestName-Field"/>
                <ref bean="KRMS-Grade-Section"/>
                <ref bean="KRMS-FreeForm-InputField"/>
                <ref bean="KRMS-Duration-section"/>
                <ref bean="Disable-Test"/>
                <ref bean="KRMS-Term-Field"/>
                <ref bean="KRMS-ClassStanding-Field"/>

            </list>
        </property>
    </bean>

    <bean id="KRMS-Org-Components-Section" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <bean parent="Uif-MessageField" p:messageText="Organizational Components"/>
                <ref bean="KRMS-Department-Field"/>
                <ref bean="KRMS-Administering-Org-Field"/>
            </list>
        </property>
    </bean>

    <bean id="KRMS-TestTree-Section" parent="Uif-TreeSection">
        <property name="headerText" value="Basic String Data tree"/>
        <property name="instructionalText" value="Data Tree"/>
        <property name="propertyName" value="tree1"/>
        <property name="defaultNodePrototype">
            <bean class="org.kuali.rice.krad.uif.container.NodePrototype">
                <property name="labelPrototype">
                    <bean parent="Uif-Message"/>
                </property>
                <property name="dataGroupPrototype">
                    <bean parent="Uif-VerticalBoxGroup" p:style="margin-left: 2em;">
                        <property name="items">
                            <list>
                                <bean parent="Uif-InputField-LabelTop" p:propertyName="testDate" p:label="Effective From">
                                    <property name="control">
                                        <bean parent="Uif-KS-Default-DateControl" />
                                    </property>
                                </bean>
                            </list>
                        </property>
                    </bean>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="KRMS-DropDownLightBox" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
        <property name="hidden" value="true"/>
        <property name="items">
            <list>

                <bean parent="Uif-InputField-LabelTop" p:label="Progressive Disclose"
                      p:width="auto" p:propertyName="field1">
                    <property name="control">
                        <bean parent="Uif-DropdownControl">
                            <property name="options">
                                <list>
                                    <bean parent="Uif-KeyLabelPair" p:key="0"
                                          p:value=""/>
                                    <bean parent="Uif-KeyLabelPair" p:key="1"
                                          p:value="Show Group"/>
                                    <bean parent="Uif-KeyLabelPair" p:key="2"
                                          p:value="Hide Group"/>
                                </list>
                            </property>
                        </bean>
                    </property>
                </bean>

                <bean parent="Uif-HorizontalBoxSection"
                      p:progressiveRender="field1 eq '1'" p:headerText="Group"
                      p:disclosure.render="false">
                    <property name="items">
                        <list>
                            <bean parent="Uif-Label" p:labelText="This section is Progressively rendered."/>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="Disable-Test" parent="Uif-VerticalBoxSection" p:headerText="Courses">
        <property name="items">
            <list>
                <bean parent="Disable-Types" />
                <bean parent="Disable-Control" id="control1"/>
                <bean parent="Disable-Control" id="control2" p:progressiveRender="field3 eq '2'"/>
            </list>
        </property>
    </bean>

    <bean id="Disable-Types" parent="Uif-InputField-LabelTop" p:propertyName="field3">
        <property name="control">
            <bean parent="Uif-DropdownControl">
                <property name="options">
                    <list>
                        <bean parent="Uif-KeyLabelPair" p:key="1" p:value="Number 1"/>
                        <bean parent="Uif-KeyLabelPair" p:key="2" p:value="Number 2"/>
                    </list>
                </property>
            </bean>
        </property>
    </bean>

    <bean id="Disable-Control" parent="Uif-InputField-LabelTop" p:propertyName="field4" p:label="My Text Field" p:required="true">
        <property name="control">
            <bean parent="Uif-TextControl" p:style="margin-top:null 2px;" p:disabled="true"/>
        </property>
    </bean>


    <bean id="KS-CourseOfferingManagement-SearchInputPage" parent="KS-Uif-Page" p:disclosure.render="false"
          p:id="searchInputPage">
        <property name="onDocumentReadyScript" value="removeEmptyContextBar('KS-CourseOffering-View-ContextBar-PlaceHolder');"/>
        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-ManageCo-Landing" />
            </list>
        </property>

        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <ref bean="KS-CourseOfferingManagement-CriteriaSection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


    <bean id="KS-CourseOfferingManagement-CriteriaSection" parent="Uif-HorizontalBoxSection"
        p:id="courseOfferingManagementCriteriaSection">
        <!--<property name="componentSecurity.editAuthz" value="true" />-->
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:propertyName="termCode" p:label="Term" p:labelPlacement="LEFT" p:required="true" p:readOnly="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="6" p:watermarkText="201301" p:minLength="5" p:maxLength="6"/>
                                </property>
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="inputCode" p:label="Course" p:required="true" p:readOnly="false">
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="30" p:watermarkText="ENGL or ENGL1 or ENGL101"/>
                                </property>
                                <property name="quickfinder.dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                                <property name="quickfinder.fieldConversions">
                                    <map>
                                        <entry key="code" value="inputCode"/>
                                    </map>
                                </property>
                                <property name="quickfinder.readOnlySearchFields" value="courseInfo.courseTitle" />
                                <property name="quickfinder.quickfinderAction">
                                    <bean parent="Uif-ActionLink" p:methodToCall="performLookup" p:id="lookup_searchCourseCode">
                                        <property name="actionImage">
                                            <bean parent="Uif-QuickLookupImage"/>
                                        </property>
                                    </bean>
                                </property>
                                <property name="quickfinder.lightBoxLookup">
                                    <bean parent="Uif-LightBoxPost" p:lookupReturnByScript="false"/>
                                </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton-Small" p:performClientSideValidation="false" p:actionLabel="Show" p:methodToCall="show"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>
</beans>
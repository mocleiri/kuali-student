    <bean id="CourseOfferingInfo" parent="CourseOfferingInfo-parent">
        <property name="titleAttribute" value="id"/>
    </bean>

    <bean id="KS-CourseOfferingManagement-ManageCourseOfferingsPage" parent="KS-Uif-Page" p:disclosure.render="false"
          p:id="manageCourseOfferingsPage" >

        <property name="pageSourceFile" value="CourseOfferingManagement-ManageCourseOfferingsPage.xml" /> <!-- Shows up in HTML so devs can find the code -->

        <!-- Dynamically replace by page-title from parent using JS-onDocumentReadyScript to reflect subject-code and long-description.
            ie: from "Course Offerings" to "WMST: Women's Studies"
            This is a work-around, at least until KRAD 2.3-m3 -->
        <property name="onDocumentReadyScript" value="updateViewHeaderText( '@{subjectCode}: @{subjectCodeDescription}' ); resetHeaderPosition('KS-CourseOffering-View-ContextBar-PlaceHolder');" />

        <property name="breadcrumbOptions.homewardPathBreadcrumbs">
            <list>
                <ref bean="KS-HomewardPathBreadcrumbs-Home"/>
                <ref bean="KS-HomewardPathBreadcrumbs-Enrollment"/>
                <ref bean="KS-HomewardPathBreadcrumbs-ManageCo-Landing" />
            </list>
        </property>

        <property name="breadcrumbOptions.breadcrumbOverrides">
            <list>
                <bean parent="Uif-BreadcrumbItem">
                    <property name="label" value="@{subjectCode}"/>
                </bean>
            </list>
        </property>

        <property name="items">
            <list>
                <!-- This adds the file names to the page HTML -->
                <ref bean="KS-SourceFile-Comment-Group"/>
                <ref bean="KS-CourseOfferingManagement-CriteriaSection"/>
                <ref bean="KS-CourseOfferingManagement-CourseOfferingResultSection"/>
                <ref bean="KS-CourseOffering-ContextBar"/>
            </list>
        </property>
    </bean>

    <bean id="KS-HomewardPathBreadcrumbs-Search-Subject" parent="Uif-BreadcrumbItem">
        <property name="label" value="@{subjectCode}"/>
        <property name="url.viewId" value="courseOfferingManagementView"/>
        <property name="url.controllerMapping" value="courseOfferingManagement"/>
        <property name="url.requestParameters">
            <map key-type="java.lang.String" merge="true">
                <entry key="methodToCall" value="show"/>
                <entry key="dataObjectClassName" value="org.kuali.student.r2.lum.course.dto.CourseInfo"/>
                <entry key="hideReturnLink" value="true"/>
                <entry key="inputCode" value="@{subjectCode}"/>
                <entry key="formKey" value="@{formKey}"/>
                <entry key="pageId" value="manageCourseOfferingsPage"/>
                <entry key="viewName" value="@{subjectCode}"/>
            </map>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-CourseOfferingResultSection" parent="Uif-VerticalBoxSection" p:id="searchResultSection">
        <property name="componentSecurity.viewAuthz" value="true"/>
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <ref bean="KS-CourseOfferingManagement-CO-ToolBarSection"/>
                <ref bean="KS-CourseOfferingManagement-CourseOfferingListSection"/>
            </list>
        </property>
    </bean>

    <bean id="KS-CourseOfferingManagement-CourseOfferingListSection" parent="KS-Uif-TableCollectionSection-WithActionSeperator" p:renderAddLine="false" p:lineActionSeparator="&#160;&#160;|&#160;&#160;"
          p:onDocumentReadyScript="removeCheckboxColumns(1, 'KS-CourseOfferingManagement-CourseOfferingListSection',&quot;handleToolbar('KS-CourseOfferingManagement-CourseOfferingListSection',['enableApproveButton', 'enableDeleteButton'], ['KS-CourseOfferingManagement-ToolBar-Approve-CO', 'KS-CourseOfferingManagement-ToolBar-Delete-CO'] )&quot;), addActionColumn(@{#parent.readOnly}, 'KS-CourseOfferingManagement-CourseOfferingListSection');">
        <property name="collectionObjectClass" value="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingListSectionWrapper" />
        <property name="propertyName" value="courseOfferingResultList" />
        <property name="collectionLookup.quickfinderAction.render" value="false" />
        <property name="layoutManager.renderSequenceField" value="false" />
        <property name="layoutManager.applyDefaultCellWidths" value="false" />
        <property name="layoutManager.applyAlternatingRowStyles" value="false" />
        <property name="layoutManager.richTable.templateOptions">
            <map merge="true">
                <entry key="sDom" value="rtip"/>
                <entry key="aaSorting" value="[[ 1, 'asc' ]]"/>
                <entry key="bPaginate" value="false"/>
                <entry key="bAutoWidth" value="false"/>
            </map>
        </property>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="isChecked" p:required="false"
                      p:onChangeScript="handleToolbar('KS-CourseOfferingManagement-CourseOfferingListSection',['enableApproveButton', 'enableDeleteButton'], ['KS-CourseOfferingManagement-ToolBar-Approve-CO', 'KS-CourseOfferingManagement-ToolBar-Delete-CO'] );"
                      p:hidden="@{#lp.crossListed or !#line.isEnableDeleteButton()}">
                    <property name="control">
                        <bean parent="Uif-CheckboxControl" p:disabled="false"/>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalFieldGroup" p:fieldLabel.labelText="CODE">
                    <property name="label" value="Label"/>
                    <property name="items">
                        <list>
                            <bean parent="KS-Uif-DataField-Simple" p:propertyName="courseOfferingCode">
                                <property name="inquiry">
                                    <bean parent="KS-Uif-Inquiry" p:dataObjectClassName="org.kuali.student.enrollment.class2.courseoffering.dto.CourseOfferingEditWrapper"  p:inquiryParameters="courseOfferingId" />
                                </property>
                            </bean>
                            <bean parent="Uif-ImageField" p:hidden="@{#lp.alternateCOCodes.isEmpty()}" p:image.altText="@{#lp.crossListedCodesUI}" p:source="@{#ConfigProperties['ks.externalizable.images.url']}/cross-listed.png">
                                <property name="toolTip">
                                    <bean parent="Uif-Tooltip" p:tooltipContent="@{#lp.crossListedCodesUI}"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="KS-Uif-DataField-Simple"
                      p:label="STATUS"
                      p:propertyName="courseOfferingStateDisplay"/>
                <bean parent="KS-Uif-DataField-Simple"
                      p:label="TITLE"
                      p:propertyName="courseOfferingDesc"/>
                <bean parent="KS-Uif-DataField-Simple"
                      p:label="CREDITS"
                      p:propertyName="courseOfferingCreditOptionDisplay"/>
                <bean parent="KS-Uif-DataField-Simple"
                      p:label="GRADING"
                      p:propertyName="courseOfferingGradingOptionDisplay"/>
                <bean name="enableApproveButton" parent="KS-Uif-DataField-Simple" p:label="enableApproveButton" p:propertyName="enableApproveButton"/>
                <bean name="enableSuspendButton" parent="KS-Uif-DataField-Simple" p:label="enableSuspendButton" p:propertyName="enableSuspendButton"/>
                <bean name="enableCancelButton" parent="KS-Uif-DataField-Simple" p:label="enableCancelButton" p:propertyName="enableCancelButton"/>
                <bean name="enableReinstateButton" parent="KS-Uif-DataField-Simple" p:label="enableReinstateButton" p:propertyName="enableReinstateButton" />
                <bean name="enableDeleteButton" parent="KS-Uif-DataField-Simple" p:label="enableDeleteButton" p:propertyName="enableDeleteButton" />
                <bean name="enableCopyCOActionLink" parent="KS-Uif-DataField-Simple" p:label="enableCopyCOActionLink" p:propertyName="enableCopyCOActionLink" />
                <bean name="enableEditCOActionLink" parent="KS-Uif-DataField-Simple" p:label="enableEditCOActionLink" p:propertyName="enableEditCOActionLink" />
            </list>
        </property>
        <property name="layoutManager.richTable.hiddenColumns">
            <set>
                <value>enableApproveButton</value>
                <value>enableSuspendButton</value>
                <value>enableCancelButton</value>
                <value>enableReinstateButton</value>
                <value>enableDeleteButton</value>
                <value>enableCopyCOActionLink</value>
                <value>enableEditCOActionLink</value>
            </set>
        </property>
        <property name="layoutManager.actionFieldPrototype">
            <bean parent="Uif-HorizontalFieldGroup" p:align="left" p:required="false" p:label="ACTIONS"/>
        </property>
        <property name="lineActions">
            <list>
                <!--<bean parent="KS-Uif-NavigationActionLink-withSeparator" p:seperator="&#160;&#160;|&#160;&#160;">-->
                    <!--<property name="seperatedActions">-->
                        <!--<list>-->
                            <bean  parent="Uif-NavigationActionLink" p:methodToCall="copyCourseOffering"
                                  p:actionLabel="Copy"
                                  p:render="@{#line.isEnableCopyCOActionLink() and !#line.isCrossListed()}"
                                  p:actionEvent="copyCOonManageCOsPage"/>
                            <bean  parent="Uif-NavigationActionLink" p:methodToCall="edit"
                                  p:actionLabel="Edit"
                                  p:render="@{#line.isEnableEditCOActionLink()}" p:actionEvent="editCOonManageCOsPage">
                            </bean>
                            <bean  parent="Uif-NavigationActionLink" p:methodToCall="loadAOs_RGs_AOCs"
                                  p:actionLabel="Manage">
                            </bean>
                        <!--</list>-->
                    <!--</property>-->
                <!--</bean>-->
            </list>
        </property>
    </bean>

</beans>

    ********************************************************************************************************************
                                        Edit a auditableEntity
    A section devoted to displaying the detail of an auditableEntity and allows editing
    ********************************************************************************************************************
    -->
    <bean id="detailSection" parent="Uif-VerticalBoxSection">
        <property name="title" value="@{humanType} Details View"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField"
                      p:propertyName="auditableEntity.code"
                      p:labelPlacement="TOP"
                      p:label="Symbol">
                    <property name="readOnly" value="true"/>
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:size="11" p:maxLength="10"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"
                      p:propertyName="auditableEntity.name"
                      p:label="Name"
                      p:labelPlacement="TOP"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl"
                              p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField"
                      p:label="Description"
                      p:propertyName="auditableEntity.description"
                      p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl"
                              p:rows="5" p:cols="80"
                              p:watermarkText="Key in the statement description here..."/>
                    </property>
                </bean>
                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="updateAuditableEntity"
                      p:actionLabel="Submit"
                      p:onClickScript="writeHiddenToForm(&quot;actionParameters[entityId]&quot;, &quot;@{auditableEntity.id}&quot;);">
                    <!--<property name="actionImage">
                        <bean parent="Uif-ImageField"
                              p:source="@{#ConfigProperties['krad.externalizable.images.url']}ks/icon_btn_add.png"/>
                    </property>-->
                </bean>
                <!--  Status message -->
                <bean parent="Uif-MessageField" p:messageText="@{statusMessage}"/>
            </list>
        </property>
    </bean>

    <bean id="detailSectionLatePeriod" parent="Uif-VerticalBoxSection">
        <property name="title" value="@{humanType} Details View"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Name"
                      p:propertyName="auditableEntity.latePeriod.name"
                      p:labelPlacement="TOP"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Description"
                      p:propertyName="auditableEntity.latePeriod.description"
                      p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"
                              p:watermarkText="Paste or key in the description here..."/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Days Late 1"
                      p:propertyName="auditableEntity.latePeriod.daysLate1"
                      p:labelPlacement="TOP"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Days Late 2"
                      p:propertyName="auditableEntity.latePeriod.daysLate2"
                      p:labelPlacement="TOP"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:label="Days Late 3"
                      p:propertyName="auditableEntity.latePeriod.daysLate3"
                      p:labelPlacement="TOP"
                      p:required="true">
                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="20" p:maxLength="100"/>
                    </property>
                </bean>
                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="updateAuditableEntity"
                      p:actionLabel="Submit"
                      p:onClickScript="writeHiddenToForm(&quot;actionParameters[entityId]&quot;, &quot;@{auditableEntity.id}&quot;);">
                    <!--<property name="actionImage">
                        <bean parent="Uif-ImageField"
                              p:source="@{#ConfigProperties['krad.externalizable.images.url']}ks/icon_btn_add.png"/>
                    </property>-->
                </bean>
                <!--  Status message -->
                <bean parent="Uif-MessageField" p:messageText="@{statusMessage}"/>
            </list>
        </property>
    </bean>

</beans>
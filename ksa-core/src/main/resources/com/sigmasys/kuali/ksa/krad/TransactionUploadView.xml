<beans xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="TransactionUploadView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value="Administrative Liaison"/>
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.FileUploadForm"/>
        <property name="entryPageId" value="TransactionUploadMenuOptionsPage"/>
        <property name="navigation">
            <bean parent="Uif-KsaNavigationGroupBase">
                    <property name="items">
                        <list>
                            <bean parent="Uif-HeaderTwo" p:headerText="Page Navigation"/>
                            <bean parent="Uif-NavigationActionLink" p:navigateToPageId="TransactionUploadMenuOptionsPage"
                                  p:actionLabel="Quick Options"/>
                        </list>
                    </property>
             </bean>
        </property>
        <property name="items">
            <list merge="true">
                <bean parent="Uif-Page" p:id="TransactionUploadMenuOptionsPage" p:title="Quick Options">
                    <property name="items">
                        <list>
                            <ref bean="transactionUploadQuickOptions"/>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Page" p:id="TransactionUploadFilePage" p:title="File Upload">
                    <property name="items">
                        <list>
                            <ref bean="fileUploadGroup"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <!-- A quick menu of options with links to other pages 1 -->
    <bean id="transactionUploadQuickOptions" parent="Uif-VerticalBoxSection"
          p:layoutManager.orientation="VERTICAL"
          p:title="Administrative Tasks"
          p:instructionalText="Select a quick navigation link from the options listed here.">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-LinkField" p:linkText="XML Batch Process" p:target="_self"
                      p:href="transactionUploadView?methodToCall=get&amp;viewId=AdminLiaisonView&amp;pageId=AdminLiaisonUploadFilePage"/>
            </list>
        </property>
    </bean>

    <!-- Lookup a person, select to view their transactions and drill down to transaction detail 2 -->
    <bean id="fileUploadGroup" parent="Uif-VerticalBoxSection"
          p:layoutManager.orientation="VERTICAL">
          <!--p:title="Upload a file for processing">-->
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="uploadFile" p:label="@{getLValue('ksa.label.upload.xml.file')}">
                    <property name="instructionalText" value="Select an XML file to Upload and Process. The file will be validated during the process task."/>
                    <property name="control">
                        <bean parent="Uif-FileControl" p:size="30"/>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalBoxSection"
                      p:layoutManager.orientation="VERTICAL">
                    <property name="disclosure.render" value="false"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="submit"
                                  p:actionLabel="@{getLValue('ksa.label.upload.file')}">
                                <!--<property name="actionImage">
                                    <bean parent="Uif-ImageField"
                                          p:source="@{#ConfigProperties['krad.externalizable.images.url']}ks/icon_btn_add.png"/>
                                </property>-->
                            </bean>
                            <bean parent="Uif-InputField" p:propertyName="uploadProcessState" p:maxLength="50">
                                <property name="bindingInfo.bindToForm" value="true"/>
                                <property name="readOnly" value="true"/>
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="51"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

</beans>
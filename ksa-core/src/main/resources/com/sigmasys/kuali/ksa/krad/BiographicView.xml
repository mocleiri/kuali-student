                <!-- Use this to display for Add the individual field values for a new row -->
<!--                <bean parent="Uif-LinkField" p:linkText="Add" p:target="_self"
                      p:href="BiographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicInformationPostalADE"/>-->
                <!-- Use this to display for Edit the individual field values for a selected row -->

                    <property name="control">
                        <bean parent="Uif-TextControl" p:size="200" p:maxLength="199"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="postalDefault"
                      p:label="Default"
                      p:fieldLabel.renderColon="true">
                    <property name="control">

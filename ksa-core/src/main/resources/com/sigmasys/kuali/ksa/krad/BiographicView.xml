    http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <bean id="BiographicView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value="Biographic Information"/>
        <property name="headerText" value="Biographic Information"/>
        <property name="entryPageId" value="BiographicPersonsPage"/>
        <property name="navigation" ref="KsaAccountNavigation"/>
        <property name="items">
            <list merge="true">
                <bean parent="Uif-Page" p:id="BiographicPersonsPage" p:title="Biographic Information List">
                    <property name="headerText" value="Biographic Information List"/>
                    <property name="items">
                        <list>
                            <ref bean="biographicInformationPersonsSection"/>
                            <ref bean="biographicInformationPersonsTblSection"/>
                        </list>
                    </property>
                </bean>

                <bean parent="Uif-Page" p:id="BiographicSummaryPage" p:title="Biographic Information">
                    <property name="headerText" value="Summary"/>
                    <property name="items">
                        <list>
                            <bean parent="Uif-Link" p:linkText="Biographic Information" p:target="_self"
                                  p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicPersonsPage&amp;userId=@{account.id}"/>
                            <ref bean="biographicInformationSummarySection"/>
                        </list>
                    </property>
                </bean>
                <!-- Add Person page  -->
                <bean parent="Uif-Page" p:id="BiographicAddPersonPage">
                    <property name="headerText" value="Add Person"/>
                    <property name="header.upperGroup">
                        <bean parent="Uif-LinkGroup">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Link" p:linkText="Biographic Information" p:target="_self"
                                          p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicPersonsPage&amp;userId=@{account.id}"/>
                                    <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="insertPerson"
                                          p:actionLabel="Add"
                                          p:onClickScript="writeHiddenToForm(&quot;actionParameters[userId]&quot;, &quot;@{account.id}&quot;);">
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="biographicInformationPersonAEDSection"/>
                        </list>
                    </property>
                </bean>
                <!-- Edit Person  -->
                <bean parent="Uif-Page" p:id="BiographicEDPersonPage">
                    <property name="headerText" value="Edit Person"/>
                    <property name="header.upperGroup">
                        <bean parent="Uif-LinkGroup">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Link" p:linkText="Biographic Information" p:target="_self"
                                          p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicPersonsPage&amp;userId=@{account.id}"/>
                                    <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="updatePerson"
                                          p:actionLabel="Update"
                                          p:onClickScript="writeHiddenToForm(&quot;actionParameters[userId]&quot;, &quot;@{account.id}&quot;);">
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="biographicInformationPersonAEDSection"/>
                        </list>
                    </property>
                </bean>
                <!-- Add/Edit Postal  -->
                <bean parent="Uif-Page" p:id="BiographicInformationPostalADE">
                    <property name="headerText" value="Add Update Postal"/>
                    <property name="header.upperGroup">
                        <bean parent="Uif-LinkGroup">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Link" p:linkText="Biographic Information" p:target="_self"
                                          p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;userId=@{account.id}"/>
                                    <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="insertPostal"
                                          p:actionLabel="Add"
                                          p:onClickScript="writeHiddenToForm(&quot;actionParameters[userId]&quot;, &quot;@{account.id}&quot;);">
                                    </bean>
                                    <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="updatePostal"
                                          p:actionLabel="Update"
                                          p:onClickScript="writeHiddenToForm(&quot;actionParameters[userId]&quot;, &quot;@{account.id}&quot;);">
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="biographicInformationPostalADESection"/>
                        </list>
                    </property>
                </bean>
                <!-- Add/Edit Electronic Contact -->
                <bean parent="Uif-Page" p:id="BiographicInformationElectronicContactADE">
                    <property name="headerText" value="Add Update Electronic Contact"/>
                    <property name="header.upperGroup">
                        <bean parent="Uif-LinkGroup">
                            <property name="items">
                                <list>
                                    <bean parent="Uif-Link" p:linkText="Biographic Information" p:target="_self"
                                          p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicPersonsPage&amp;userId=@{account.id}"/>
                                    <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="insertElectronicContact"
                                          p:actionLabel="Add"
                                          p:onClickScript="writeHiddenToForm(&quot;actionParameters[userId]&quot;, &quot;@{account.id}&quot;);">
                                    </bean>
                                    <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="updateElectronicContact"
                                          p:actionLabel="Update"
                                          p:onClickScript="writeHiddenToForm(&quot;actionParameters[userId]&quot;, &quot;@{account.id}&quot;);">
                                    </bean>
                                </list>
                            </property>
                        </bean>
                    </property>
                    <property name="items">
                        <list>
                            <ref bean="biographicInformationElectronicContactADESection"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
<!--        <property name="additionalCssFiles" ref=""/>
        <property name="additionalJsFiles" ref=""/>
        <property name="viewHelperServiceClassName" value=""/>
        <property name="defaultBindingObjectPath" vaue=""/>-->
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.BiographicForm"/>
    </bean>

    <!--
    ********************************************************************************************************************
                                 Biographic Information Summary section
    A vertical section with horizontal sub sections devoted to Person information
    p:layoutManager.orientation="VERTICAL" p:layoutManager.orientation="HORIZONTAL"
    ********************************************************************************************************************
    -->
    <bean id="biographicInformationPersonsSection" parent="Uif-HorizontalBoxSection"
          p:title="@{account.id}"
          p:width="85%">
        <property name="disclosure.render" value="false"/>
        <property name="items">
            <list>
                <!-- Use this to display for Add the individual field values for a new person row -->
                <bean parent="Uif-LinkField" p:linkText="Add Person" p:target="_self"
                      p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicAddPersonPage&amp;userId=@{account.id}"/>
                <!-- Use this to display for Add the individual field values for a new postal row -->
                <bean parent="Uif-LinkField" p:linkText="Add Postal" p:target="_self"
                      p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicInformationPostalADE&amp;userId=@{account.id}"/>
                <ref bean="biographicInformationPostalSection" />
                <!-- Use this to display for Add the individual field values for a new electronic contact row -->
                <bean parent="Uif-LinkField" p:linkText="Add Electronic Contact" p:target="_self"
                      p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicInformationElectronicContactADE&amp;userId=@{account.id}"/>
            </list>
        </property>
    </bean>

    <!--
    ********************************************************************************************************************
                                 Biographic Information table section
    A table listing of PersonNames, their type and composite person name
    ********************************************************************************************************************
    -->
    <bean id="biographicInformationPersonsTblSection" parent="Uif-VerticalBoxSubSection">
        <property name="items">
            <list>
                <bean id="biographicInformationPersonSetSection" parent="Uif-Disclosure-TableCollectionSection"
                      p:layoutManager.numberOfColumns="4"
                      p:disclosure.render="false"
                      p:progressiveRenderViaAJAX="true"
                      p:title="@{account.id}"
                      p:instructionalText="The following table contains a list of Biographic Entries for the selected user."
                      p:width="85%">
                    <property name="readOnly" value="true"/>
                    <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.PersonName"/>
                    <property name="propertyName" value="personNameList"/>
                    <!-- turn off the display of the row sequence -->
                    <property name="layoutManager.sequencePropertyName" value="id"/>
                    <!-- sorting, paging and export, otherwise false for none -->
                    <property name="layoutManager.richTable.render" value="true"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="items">
                        <list>
                            <!-- CompositePersonName does not exist in PersonName model -->
                            <!-- The type of person information for the record personType -->
                            <bean parent="Uif-InputField" p:propertyName="kimNameType"
                                  p:label="Type"
                                  p:maxLength="15" p:fieldLabel.renderColon="true">
                                <property name="bindingInfo.bindToForm" value="true"/>
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="16"/>
                                </property>
                            </bean>
                            <!-- compositePersonName Last, First, Middle -->
                            <bean parent="Uif-InputField" p:propertyName="lastName"
                                  p:label="Description"
                                  p:maxLength="50" p:fieldLabel.renderColon="true">
                                <property name="bindingInfo.bindToForm" value="true"/>
                                <property name="control">
                                    <bean parent="Uif-TextControl" p:size="51"/>
                                </property>
                            </bean>
                            <!-- Use this to display for View to drill down into the Person record -->
                            <bean parent="Uif-LinkField" p:linkText="View" p:target="_self" p:align="center"
                                  p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicSummaryPage&amp;userId=@{account.id}&amp;id=@{#line.id}"/>
                            <!-- Use this to display for Edit the individual field values for a selected row -->
                            <bean parent="Uif-LinkField" p:linkText="Edit" p:target="_self" p:align="center"
                                  p:href="biographicView?methodToCall=get&amp;viewId=BiographicView&amp;pageId=BiographicEDPersonPage&amp;userId=@{account.id}&amp;id=@{#line.id}"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>


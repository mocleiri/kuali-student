<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="PaymentPlanView" parent="Uif-KsaFormView" p:footer.render="false">
        <property name="title" value=""/>
        <property name="headerText" value="Payment Plans"/>
        <property name="entryPageId" value="CreatePaymentPlanPage"/>
        <property name="viewHelperServiceClass" value="com.sigmasys.kuali.ksa.krad.helper.PaymentPlanHelper"/>
        <property name="navigation" ref="KsaThirdPartyPaymentPlansNavigation"/>
        <property name="items">
            <list merge="true">
                <bean parent="Uif-Page" p:id="CreatePaymentPlanPage">
                    <property name="headerText" value="Create Payment Billing Plan"/>
                    <property name="items">
                        <list>
                            <ref bean="createPaymentPlan"/>

                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Page" p:id="CreateThirdPartyPage">
                    <property name="headerText" value="Create Third Party Payment Plan"/>
                    <property name="items">
                        <list>
                            <ref bean="createThirdParty"/>

                        </list>
                    </property>
                </bean>
                <bean parent="Uif-Page" p:id="ManageThirdPartyPage">
                    <property name="headerText" value="Manage Third Party Payment Plans"/>
                    <property name="items">
                        <list>
                            <ref bean="manageThirdParty"/>
                        </list>
                    </property>
                </bean>
            </list>
        </property>
        <property name="formClass" value="com.sigmasys.kuali.ksa.krad.form.PaymentPlanForm"/>
    </bean>

    <bean id="createPaymentPlan" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <ref bean="paymentPlanDescription"/>
            </list>
        </property>

    </bean>

    <bean id="manageThirdParty" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <ref bean="filterPlansSection"/>
                <ref bean="thirdPartyPaymentPlans"/>
            </list>
        </property>
    </bean>

    <bean id="createThirdParty" parent="Uif-VerticalBoxSection">
        <property name="items">
            <list>
                <ref bean="thirdPartyDescription"/>
                <ref bean="newThirdPartyAdministrative"/>
                <ref bean="thirdPartyOpenPeriod"/>
                <ref bean="thirdPartyChargePeriod"/>
                <ref bean="thirdPartyCharges"/>
                <ref bean="thirdPartyTransferredTransactions"/>
                <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="insertThirdParty" p:actionLabel="Submit"/>
            </list>
        </property>

    </bean>
    <bean id="paymentPlanDescription" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Descriptive Information"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection"><property name="items"><list>
                    <bean parent="Uif-InputField" p:propertyName="newPaymentBillingPlan.code" p:label="Code"/>
                    <bean parent="Uif-InputField" p:propertyName="newPaymentBillingPlan.name" p:label="Name"/>
                </list></property></bean>
                <bean parent="Uif-InputField" p:propertyName="newPaymentBillingPlan.description" p:label="Description" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"/>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="thirdPartyDescription" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Descriptive Information"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection"><property name="items"><list>
                    <bean parent="Uif-InputField" p:propertyName="code" p:label="Code"/>
                    <bean parent="Uif-InputField" p:propertyName="name" p:label="Name"/>
                </list></property></bean>
                <bean parent="Uif-InputField" p:propertyName="description" p:label="Description" p:labelPlacement="TOP">
                    <property name="control">
                        <bean parent="Uif-TextAreaControl" p:rows="5" p:cols="40"/>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="newThirdPartyAdministrative" parent="Uif-HorizontalBoxSection">
        <property name="headerText" value="Administrative Information"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Responsible Account" p:labelPlacement="TOP" p:propertyName="responsibleAccount">
                    <property name="suggest">
                        <bean parent="Uif-Suggest">
                            <property name="valuePropertyName" value="id"/>
                            <property name="templateOptions" value="minLength:2,delay:0"/>
                            <property name="suggestQuery">
                                <bean parent="Uif-AttributeQueryConfig">
                                    <property name="queryMethodToCall" value="getAccountsForSuggest"/>
                                </bean>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-VerticalBoxSection" p:methodToCallOnRefresh="getResponsibleAccount" p:refreshWhenChangedPropertyNames="responsibleAccount">
                    <property name="items">
                        <list>
                            <bean parent="Uif-MessageField" p:messageText="@{responsibleAccountMessage}"/>
                            <bean parent="Uif-VerticalBoxSection" p:style="background-color: #CCC; border-radius: 15px;" p:render="@{!#empty(thirdPartyAccount.id)}">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Disclosure-GridSection" p:readOnly="true" >
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-InputField" p:propertyName="thirdPartyAccount.id" p:label="Userid" />
                                                    <bean parent="Uif-InputField" p:propertyName="thirdPartyAccount.compositeDefaultPersonName" p:label="Name" />
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="thirdPartyAdministrative" parent="Uif-HorizontalBoxSection">
        <property name="headerText" value="Administrative Information"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:label="Responsible Account" p:labelPlacement="TOP" p:propertyName="thirdPartyAccount.id">
                    <property name="suggest">
                        <bean parent="Uif-Suggest">
                            <property name="valuePropertyName" value="id"/>
                            <property name="templateOptions" value="minLength:2,delay:0"/>
                            <property name="suggestQuery">
                                <bean parent="Uif-AttributeQueryConfig">
                                    <property name="queryMethodToCall" value="getAccountsForSuggest"/>
                                </bean>
                            </property>
                        </bean>
                    </property>
                </bean>
                <bean parent="Uif-VerticalBoxSection" p:methodToCallOnRefresh="getResponsibleAccount" p:refreshWhenChangedPropertyNames="thirdPartyAccount.id">
                    <property name="items">
                        <list>
                            <bean parent="Uif-VerticalBoxSection" p:style="background-color: #CCC; border-radius: 15px;">
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-Disclosure-GridSection" p:readOnly="true" >
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-InputField" p:propertyName="thirdPartyAccount.id" p:label="Userid" />
                                                    <bean parent="Uif-InputField" p:propertyName="thirdPartyAccount.compositeDefaultPersonName" p:label="Name" />
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>

                        </list>
                    </property>
                </bean>
            </list>
        </property>
    </bean>

    <bean id="thirdPartyOpenPeriod" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Open Period"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection"><property name="items"><list>
                    <bean parent="Uif-InputField" p:propertyName="openPeriodStartDate" p:labelPlacement="TOP" p:label="Start"
                          p:constraintText="Format: mm/dd/yyyy">
                        <property name="control">
                            <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                        </property>
                    </bean>
                    <bean parent="Uif-InputField" p:propertyName="openPeriodEndDate" p:labelPlacement="TOP" p:label="End"
                          p:constraintText="Format: mm/dd/yyyy">
                        <property name="control">
                            <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                        </property>
                    </bean>
                </list></property></bean>

            </list>
        </property>
    </bean>

    <bean id="thirdPartyChargePeriod" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Charge Period"/>
        <property name="items">
            <list>
                <bean parent="Uif-HorizontalBoxSection"><property name="items"><list>
                    <bean parent="Uif-InputField" p:propertyName="chargePeriodStartDate" p:labelPlacement="TOP" p:label="Start"
                          p:constraintText="Format: mm/dd/yyyy">
                        <property name="control">
                            <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                        </property>
                    </bean>
                    <bean parent="Uif-InputField" p:propertyName="chargePeriodEndDate" p:labelPlacement="TOP" p:label="End"
                          p:constraintText="Format: mm/dd/yyyy">
                        <property name="control">
                            <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                        </property>
                    </bean>
                </list></property></bean>

            </list>
        </property>
    </bean>

    <bean id="thirdPartyCharges" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Charges"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="maxAmount" p:label="Maximum Amount" p:labelPlacement="TOP"/>

                <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="6" p:width="85%">
                    <property name="headerText" value="Allowable Charges"/>
                    <property name="readOnly" value="false"/>
                    <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.tp.ThirdPartyAllowableCharge"/>
                    <property name="propertyName" value="thirdPartyAllowableCharges"/>
                    <property name="layoutManager.sequencePropertyName" value="name"/>
                    <property name="layoutManager.richTable.render" value="true"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="layoutManager.applyDefaultCellWidths" value="false"/>
                    <property name="layoutManager.richTable.disableTableSort" value="false"/>
                    <property name="layoutManager.richTable.templateOptions">
                        <map merge="true">
                            <entry key="bPaginate" value="true"/>
                            <!--<entry key="iDisplayLength" value="20"/>-->
                        </map>
                    </property>

                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:label="Transaction Type Mask" p:propertyName="transactionTypeMask"/>
                            <bean parent="Uif-InputField" p:label="Priority" p:propertyName="priority"/>
                            <bean parent="Uif-InputField" p:label="Percentage Allowed" p:propertyName="maxPercentage"/>
                            <bean parent="Uif-InputField" p:label="Maximum Amount" p:propertyName="maxAmount"/>
                            <bean parent="Uif-InputField" p:label="Charge Distribution Plan" p:propertyName="distributionPlanCode">
                                <property name="control">
                                    <bean parent="Uif-DropdownControl" p:width="100%"/>
                                </property>
                                <property name="optionsFinder">
                                    <bean class="com.sigmasys.kuali.ksa.krad.util.DistributionPlanKeyValuesFinder"/>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>


            </list>
        </property>
    </bean>

    <bean id="thirdPartyTransferredTransactions" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Transferred Transaction Settings"/>
        <property name="items">
            <list>
                <bean parent="Uif-InputField" p:propertyName="effectiveDate" p:labelPlacement="TOP" p:label="Effective Date"
                      p:constraintText="Format: mm/dd/yyyy">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                    </property>
                </bean>
                <bean parent="Uif-InputField" p:propertyName="recognitionDate" p:labelPlacement="TOP" p:label="Recognition Date"
                      p:constraintText="Format: mm/dd/yyyy">
                    <property name="control">
                        <bean parent="Uif-DateControl" p:size="11" p:maxLength="20"/>
                    </property>
                </bean>
                <bean id="PaymentPlanViewTransferType" parent="Uif-InputField" p:propertyName="transferType" p:labelPlacement="TOP" p:label="Transfer Type"/>
            </list>
        </property>
    </bean>

    <bean id="filterPlansSection" parent="Uif-Disclosure-VerticalBoxSection">
        <property name="headerText" value="Filter"/>
        <property name="items">
            <list>

                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <!-- Plan Name suggest -->
                            <bean parent="Uif-InputField" p:label="Name of Plan" p:propertyName="filterPlanName">
                                <property name="suggest">
                                    <bean parent="Uif-Suggest">
                                        <property name="valuePropertyName" value="id"/>
                                        <property name="labelPropertyName" value="name"/>
                                        <property name="templateOptions" value="minLength:2,delay:0,html:true"/>
                                        <property name="suggestQuery">
                                            <bean parent="Uif-AttributeQueryConfig">
                                                <property name="queryMethodToCall" value="getThirdPartyPlansForSuggest"/>
                                            </bean>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="filterThirdPartyPlans" p:actionLabel="Add this Plan"/>
                            <bean parent="Uif-ListCollectionGroup" >
                                <property name="headerText" value="Selected Plans"/>
                                <property name="readOnly" value="true"/>
                                <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.tp.ThirdPartyPlan"/>
                                <property name="propertyName" value="filterThirdPartyPlans"/>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-HorizontalFieldGroup">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-InputField" p:propertyName="name"/>
                                                    <bean parent="Uif-InputField" p:propertyName="code"/>
                                                    <bean parent="Uif-ActionLink" p:actionLabel="Remove" p:methodToCall="removeThirdPartyPlan" p:actionParameters="planId:@{#line.id}">
                                                        <property name="actionImage">
                                                            <bean parent="Uif-Image" p:source="../images/remove.png"/>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>
                <bean parent="Uif-HorizontalBoxSection">
                    <property name="items">
                        <list>
                            <!-- Third Party Account suggest -->
                            <bean parent="Uif-InputField" p:label="Responsible Account" p:propertyName="filterThirdPartyAccount">
                                <property name="suggest">
                                    <bean parent="Uif-Suggest">
                                        <property name="valuePropertyName" value="id"/>
                                        <property name="labelPropertyName" value="id"/>
                                        <property name="templateOptions" value="minLength:2,delay:0,html:true"/>
                                        <property name="suggestQuery">
                                            <bean parent="Uif-AttributeQueryConfig">
                                                <property name="queryMethodToCall" value="getAccountsForSuggest"/>
                                            </bean>
                                        </property>
                                    </bean>
                                </property>
                            </bean>
                            <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="filterThirdPartyAccount" p:actionLabel="Add this Account"/>
                            <bean parent="Uif-ListCollectionGroup" >
                                <property name="headerText" value="Selected Accounts"/>
                                <property name="readOnly" value="true"/>
                                <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.model.ThirdPartyAccount"/>
                                <property name="propertyName" value="filterThirdPartyAccounts"/>
                                <property name="items">
                                    <list>
                                        <bean parent="Uif-HorizontalFieldGroup">
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-InputField" p:propertyName="id"/>
                                                    <bean parent="Uif-InputField" p:propertyName="compositeDefaultPersonName"/>
                                                    <bean parent="Uif-ActionLink" p:actionLabel="Remove" p:methodToCall="removeThirdPartyAccount" p:actionParameters="accountId:@{#line.id}">
                                                        <property name="actionImage">
                                                            <bean parent="Uif-Image" p:source="../images/remove.png"/>
                                                        </property>
                                                    </bean>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>

            </list>
        </property>
    </bean>

    <bean id="thirdPartyPaymentPlans" parent="Uif-VerticalBoxSection">
        <property name="headerText" value="Plans"/>
        <property name="items">
            <list>
                <bean parent="Uif-Message" p:messageText="No plans match filter criteria" p:render="@{thirdPartyPlans.size() == 0}"/>
                <bean parent="Uif-TableCollectionSection" p:layoutManager.numberOfColumns="5" p:width="85%">
                    <property name="readOnly" value="true"/>
                    <property name="collectionObjectClass" value="com.sigmasys.kuali.ksa.krad.model.ThirdPartyPlanModel"/>
                    <property name="propertyName" value="thirdPartyPlans"/>
                    <property name="layoutManager.sequencePropertyName" value="name"/>
                    <property name="layoutManager.richTable.render" value="true"/>
                    <property name="layoutManager.renderSequenceField" value="false"/>
                    <property name="layoutManager.richTable.templateOptions">
                        <map merge="true">
                            <entry key="bPaginate" value="true"/>
                            <!--<entry key="iDisplayLength" value="20"/>-->
                        </map>
                    </property>

                    <property name="items">
                        <list>
                            <bean parent="Uif-InputField" p:label="Name of Plan" p:propertyName="name"/>
                            <bean parent="Uif-InputField" p:label="Description" p:propertyName="description"/>
                            <bean parent="Uif-LinkField" p:label="Responsible Account" p:linkText="@{#line.thirdPartyAccount.id}" p:href="quickView?methodToCall=get&amp;viewId=QuickView&amp;userId=@{#line.thirdPartyAccount.id}"/>
                            <bean parent="Uif-HorizontalFieldGroup" p:label="Plan Members">
                                <property name="items">
                                    <list>

                                        <bean parent="Uif-ImageField" p:source="../images/plan_members.png" p:style="cursor:pointer;" p:altText="View Plan Members" p:title=""
                                              p:onClickScript="showLightboxComponent('planMemberLightbox@{#lineSuffix}');"/>
                                        <bean id="planMemberLightbox" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
                                            <property name="headerText" value="Third Party Payment Plan Members"/>
                                            <property name="hidden" value="true"/>
                                            <property name="items">
                                                <list>
                                                    <bean parent="Uif-InputField" p:propertyName="name"/>
                                                    <bean parent="Uif-InputField" p:propertyName="code"/>



                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                            <bean parent="Uif-VerticalFieldGroup" p:label="Plan Settings">
                                <property name="items">
                                    <list>
                                       <bean parent="Uif-ImageField" p:source="../images/settings.png" p:style="cursor:pointer;" p:altText="View Plan Settings" p:title=""
                                              p:onClickScript="showLightboxComponent('planSettingsLightbox@{#lineSuffix}');"/>
                                        <bean id="planSettingsLightbox" parent="Uif-VerticalBoxSection" p:layoutManager.orientation="VERTICAL">
                                            <property name="headerText" value="Third Party Payment Plan Settings"/>
                                            <property name="hidden" value="true"/>
                                            <property name="readOnly" value="false"/>
                                            <property name="items">
                                                <list>
                                                    <ref bean="thirdPartyDescription"/>
                                                    <ref bean="thirdPartyAdministrative"/>
                                                    <ref bean="thirdPartyOpenPeriod"/>
                                                    <ref bean="thirdPartyChargePeriod"/>
                                                    <ref bean="thirdPartyCharges"/>
                                                    <ref bean="thirdPartyTransferredTransactions"/>
                                                    <bean parent="Uif-SecondaryActionButton-Small" p:methodToCall="updateThirdParty" p:actionLabel="Submit" p:actionParameters="planId:@{#line.parent.id}"/>
                                                </list>
                                            </property>
                                        </bean>
                                    </list>
                                </property>
                            </bean>
                        </list>
                    </property>
                </bean>



            </list>
        </property>
    </bean>






</beans>